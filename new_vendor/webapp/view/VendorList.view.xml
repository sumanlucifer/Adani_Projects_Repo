<mvc:View
    xmlns="sap.m"
    height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
    controllerName="com.agel.mmts.newvendor.controller.VendorList">
	<f:DynamicPage headerExpanded="true" busy="{objectViewModel>/busy}">
        <!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title id="pageTitle" text="{i18n>Vendors}"/>
				</f:heading>
                 <f:actions>
                     <Button icon="sap-icon://add" class="sapUiSizeCompact" id="idAddNewVendorBTN" text="{i18n>AddNewVendor}" type="Emphasized" tooltip="{i18n>AddNewVendor}" press="onAddNewVendorPress"/>
                </f:actions>
			</f:DynamicPageTitle>
		</f:title>
        <!-- DynamicPage Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<f:content>
					<core:Fragment fragmentName="com.agel.mmts.newvendor.view.fragments.filterbar" type="XML"/>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
        <!-- DynamicPage Content -->
		<f:content>
            <core:Fragment fragmentName="com.agel.mmts.newvendor.view.fragments.VendorTable" type="XML"/>
		</f:content>
	</f:DynamicPage>
</mvc:View>