<mvc:View 
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:core="sap.ui.core"
    xmlns:smartTable="sap.ui.comp.smarttable" height="100%"
    controllerName="com.agel.mmts.newvendor.controller.CreateVendor">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" showFooter="true">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:expandedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>CreateVendor}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{VendorCode}"/>
                    </FlexBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>CreateVendor}" wrapping="true" titleStyle="H4"/>
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedContent>
                </uxap:expandedContent>
                <uxap:snappedTitleOnMobile>
                    <Title text="{i18n>CreateVendor}" wrapping="true" titleStyle="Auto"/>
                </uxap:snappedTitleOnMobile>
                <uxap:actions>
                    <Button text="{i18n>Save}" class="sapUiSizeCompact" type="Emphasized" press="onSaveVendorDetails"/>
                    <Button text="{i18n>Cancel}" class="sapUiSizeCompact" press="onCancelVendorDetails"/>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:sections>
            <!-- Vendor Basic Details Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>BasicDetails}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>BasicDetails}" titleLevel="H6">
                        <uxap:blocks>
                            <core:Fragment fragmentName="com.agel.mmts.newvendor.view.fragments.DisplayEditVendor.EditVendorDetails" type="XML"/>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Locations Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>Locations}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>Locations}" titleLevel="H6">
                        <uxap:blocks>
                            <core:Fragment fragmentName="com.agel.mmts.newvendor.view.fragments.DisplayEditVendor.EditLocationDetails" type="XML"/>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>