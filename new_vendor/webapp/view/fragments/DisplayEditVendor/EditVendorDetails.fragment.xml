<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
     xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">
    <f:SimpleForm id="idEditBasicDetailsSFM" class="sapUiSizeCompact" editable="false" layout="ColumnLayout"	title="{i18n>BasicDetails}" columnsM="2" columnsL="3" columnsXL="4">
        <f:toolbar>
			<Toolbar>
                <MessageStrip 
                    visible="{= ${objectViewModel>/EditMode} === true ? false : true}"
                    class="z_toolbar_msgstp"
                    text="{i18n>ChangesReflectedMSGStrip}"
                    type="Information" showIcon="true"/>
				<ToolbarSpacer />
		    	<Label text="{i18n>IsActive}: "/>
                <Switch 
                    change="onVendorIsActiveFlagChange"
                    state="{= ${VendorViewModel>/IsActive} ? true : false}" customTextOn="Yes" customTextOff="No"/>
			</Toolbar>
		</f:toolbar>
        <f:content>
            <Label text="{i18n>VendorCode}" required="true"/>
            <Input 
                change="onVendorCodeChange"
                name="VendorCode"
                required="true"
                maxLength="30"
                value="{
                    path: 'VendorViewModel>/VendorCode',
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        minLength: 1,
                        maxLength: 30
                    }
                }"
                enabled="{= ${objectViewModel>/EditMode} === true ? false : true}"/>
            <Label text="{i18n>Name}" />
            <Input 
                maxLength="50"
                value="{
                    path: 'VendorViewModel>/Name',
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        maxLength: 50
                    }
                }"/>
            <Label text="{i18n>GSTNumber}"/>
            <Input
                maxLength="50" 
                value="{
                    path: 'VendorViewModel>/GSTNumber',
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        maxLength: 50
                    }
                }"/>
            <Label text="{i18n>City}"/>
            <Input 
                maxLength="50"
                value="{
                    path: 'VendorViewModel>/City',
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        maxLength: 50
                    }
                }"/>
            <Label text="{i18n>PostCode}"/>
            <Input 
                maxLength="50"
                value="{
                    path: 'VendorViewModel>/PostCode',
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        maxLength: 50
                    }
                }"/>
            <Label text="{i18n>Street}"/>
            <Input
                maxLength="50"
                value="{
                    path: 'VendorViewModel>/Street',
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        maxLength: 50
                    }
                }"/>
            <Label text="{i18n>StreetSuppl1}"/>
            <Input 
                maxLength="50"
                value="{
                    path: 'VendorViewModel>/StreetSuppl1',
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        maxLength: 50
                    }
                }"/>
            <Label text="{i18n>Country}"/>
            <Input 
                maxLength="50"
                value="{
                    path: 'VendorViewModel>/Country',
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        maxLength: 50
                    }
                }"/>
            <Label text="{i18n>Region}"/>
            <Input 
                maxLength="50"
                value="{
                    path: 'VendorViewModel>/Region',
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        maxLength: 50
                    }
                }"/>
            <Label text="{i18n>PhoneNumber}" />
            <Input  type="Number" maxLength="15" value="{VendorViewModel>/PhoneNumber}"/>
            <Label text="{i18n>EmailID}"/>
            <Input  name="Email" type="Email" value="{VendorViewModel>/Email}" maxLength="50" change="checkValidationEmail"/>
            <Label text="{i18n>Pan}"/>
            <Input 
                maxLength="10"
                value="{
                    path: 'VendorViewModel>/Pan',
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        maxLength: 10
                    }
                }"/>
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>