<mvc:View xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns="sap.m" controllerName="com.agel.mmts.storeinchargescanqr.controller.LandingPage" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" showFooter="true">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:content>
                    <!-- <HBox alignItems="Center">
                        <Text text="Domestic Entry"/>
                    </HBox> -->
                    <HBox alignItems="Center">
                        <Input id="idInputQRCode" width="100%" showSuggestion="true" showValueHelp="false" 
                            placeholder="Enter QR Number" valueLiveUpdate="true" class="sapUiSmallMarginEnd" enabled="{oViewModel>/inputQRCode}">
                        </Input>
                        <Button id="idQRBtn" text="Submit" type="Emphasized" press="onPressSubmitQRCode" class="sapUiSmallMarginEnd" enabled="{oViewModel>/submitQRCode}"/>
                    </HBox>
                    <HBox alignItems="Center">
                        <Text text="OR" class="sapUiTinyMargin"/>
                    </HBox>
                    <HBox alignItems="Center">
                        <Button id="idQRSubmit" text="Scan QR Code" type="Emphasized" press="onPressScanQRCode" class="sapUiSmallMarginEnd" enabled="{oViewModel>/scanQRCode}"/>
                    </HBox>
                </uxap:content>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
        </uxap:headerContent>
        <uxap:sections>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>
