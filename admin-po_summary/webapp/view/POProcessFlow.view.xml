<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m"
	xmlns="sap.suite.ui.commons"
	controllerName="com.agel.mmts.adminposummary.controller.POProcessFlow">
	<m:Panel>
		<m:Label text="Process Flow sample - Merged Lanes, Zooming and Update of Nodes" />
		<m:HBox renderType="Bare">
			<m:Button text="Zoom In" press="onZoomIn" />
			<m:Button text="Zoom Out" press="onZoomOut" />
			<m:Button text="Update Nodes Content" press="onUpdateModel" />
		</m:HBox>
		<ProcessFlow
			id="processflow"
			scrollable="false"
			nodePress="onNodePress"
			nodes="{/nodes}"
			lanes="{/lanes}">
			<nodes>
				<ProcessFlowNode
					laneId="{lane}"
					nodeId="{id}"
					title="{title}"
					titleAbbreviation="{titleAbbreviation}"
					children="{children}"
					state="{state}"
					stateText="{stateText}"
					texts="{texts}"
					focused="{focused}" />
			</nodes>
			<lanes>
				<ProcessFlowLaneHeader
					laneId="{id}"
					iconSrc="{icon}"
					text="{label}"
					position="{position}" />
			</lanes>
		</ProcessFlow>
	</m:Panel>
</mvc:View>
