<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:tt="sap.ui.table" controllerName="com.agel.mmts.storeinchargeapprovals.view.blocks.ApprovalsDetail.outerPackaging.OuterPackagingController">


    <Table id="idOuterPackaging" items="{path: 'PackingList/OuterPackagings'}" autoPopinMode="true" growingThreshold="5" growing="true" fixedLayout="false">
        <columns>
            <Column>
                <Text text="{i18n>OuterPackaging}"/>
            </Column>
            <!-- <Column>
                <Text text="Line Item ID"/>
            </Column> -->
            <!-- <Column>
                <Text text="Dispatch Qty."/>
            </Column> -->
            <Column>
                <Text text="{i18n>PackagingDimensions}"/>
            </Column>
            <!-- <Column>
                <Text text="UOM"/>
            </Column> -->
            <Column visible="{= ${objectViewModel>/viewQrCode}}">
               <Text text="{i18n>Action}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier title="{PackagingType}"/>
                    <!-- <ObjectIdentifier title="{ID}"/> -->
                    <!-- <Text text="{DispatchQty}"/> -->
                    <Text text="{PackagingDimensions}"/>
                    <!-- <Text text="{UOM}"/> -->
                    <Link text="{i18n>ViewQRCode}" binding="{QrCode}" visible="{= ${QRNumber}}" press="onViewQRCodePressSmart"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    
</mvc:View>


