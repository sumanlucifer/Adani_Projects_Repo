<mvc:View xmlns:f2="sap.f"
    xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m" controllerName="com.agel.mmts.userroleassignment.controller.UserDetails"
    xmlns:basicDetails="com.agel.mmts.userroleassignment.view.blocks.UserDetails.basicDetails.blocks"
    height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" 
    headerContentPinnable="true" toggleHeaderOnTitleClick="true" busy="{objectViewModel>/busy}">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:breadcrumbs>
                    <!-- <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>confirmedPODetails}">
                        <Link text="{i18n>assignedPOList}" press=".handleToAllPOBreadcrumPress"/>
                    </Breadcrumbs> -->
                </uxap:breadcrumbs>
                <uxap:expandedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>UserDetails}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <!-- <Title text="{ID}" wrapping="true" titleStyle="H3" /> -->
                    </FlexBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>UserDetails}" wrapping="true" titleStyle="H4"/>
                        <!-- <Title text="{ID}" wrapping="true" titleStyle="H3"/> -->
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedContent></uxap:expandedContent>
                <uxap:snappedTitleOnMobile>
                    <Title text="{i18n>UserDetails}" wrapping="true" titleStyle="Auto"/>
                </uxap:snappedTitleOnMobile>
                <uxap:actions>          
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
            <FlexBox wrap="Wrap" height="100%" renderType="Bare" direction="Column">
                <VBox renderType="Bare">
                    <FlexBox direction="Row" renderType="Bare" class="sapUiTinyMarginBottom">
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>firstName}" />
                            <Text text="{FirstName}"/>
                        </VBox>
                        
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>lastName}" />
                            <Text text="{LastName}"/>
                        </VBox>

                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>Email}" />
                            <Link text="{Email}"/>
                        </VBox>

                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>CreatedOn}" />
                            <Text text="{path:'CreatedAt',
                                            type: 'sap.ui.model.type.Date',
                                            formatOptions: {
                                                pattern: 'MMMM dd, yyyy'
                                            }
                                }"/>
                        </VBox>
                        <VBox renderType="Bare">
                            <Label text="{i18n>active}" />
                            <ObjectStatus text="{Active}" state="{= ${Active} === 'PENDING' ? 'Warning' : ${Active} === 'REJECTED' ? 'Error' : 'Success'}"/>
                        </VBox>
                    </FlexBox>
                </VBox>
            </FlexBox>
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>basicDetails}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>basicDetails}" titleLevel="H6">
                        <uxap:blocks>
                            <basicDetails:BasicDetails id="idUserRolesBlock" class="sapUxAPObjectPageSubSectionAlignContent" onRoleDialogPress= "onRoleDialogPress"/>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>