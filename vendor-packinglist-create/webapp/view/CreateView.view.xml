<mvc:View xmlns:f2="sap.f"
    xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m" controllerName="com.agel.mmts.vendorpackinglistcreate.controller.CreateView"
    xmlns:lineItemsTable="com.agel.mmts.vendorpackinglistcreate.view.blocks.createView.lineItemsTable.block"
    xmlns:packingListContainsTable="com.agel.mmts.vendorpackinglistcreate.view.blocks.createView.packingListContainsTable.block" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" busy="{objectViewModel>/busy}">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:breadcrumbs>
                    <!-- <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>PODetails}">
                        <Link text="{i18n>assignedPOList}" press=".handleToAllPOBreadcrumPress"/>
                    </Breadcrumbs> -->
                </uxap:breadcrumbs>
                <uxap:expandedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>packingList}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{Name}" wrapping="true" titleStyle="H3" />
                    </FlexBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>packingList}" wrapping="true" titleStyle="H4"/>
                        <Title text="{Name}" wrapping="true" titleStyle="H3"/>
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedContent></uxap:expandedContent>
                <uxap:snappedTitleOnMobile>
                    <Title text="{i18n>packingList}" wrapping="true" titleStyle="Auto"/>
                </uxap:snappedTitleOnMobile>
                <uxap:actions>
                    <HBox visible="{= ${IsDraft} ? true : false}">
                        <items>
                            <Button text="{i18n>Save}" icon="sap-icon://save" press="onSavePackingListPress" type="Emphasized" 
                                visible="{= ${objectViewModel>/isPackingListInEditModel} ? true : false}" class="sapUiTinyMarginEnd" 
                                enabled="{= ${objectViewModel>/isEnteredValuesValid}}"/>
                            <Button text="{i18n>Edit}" icon="sap-icon://edit" press="onEditPackingListPress" type="Default" 
                                visible="{= ${objectViewModel>/isPackingListInEditModel} ? false : true}" />
                            <Button text="{i18n>Proceed}" class="sapUiTinyMarginBegin" press="onProceedStep1Press" type="Emphasized" 
                                visible="{= ${objectViewModel>/isPackingListInEditModel} ? false : true}" enabled="{= ${IsProcessOneCompletes}}"/>
                        </items>
                    </HBox>

                    <Button text="{i18n>Proceed}" class="sapUiTinyMarginBegin" press="onProceedStep1Press" type="Emphasized" visible="{= ${IsDraft} ? false : true}"/>

                    <!--  <Button text="Save" icon="sap-icon://save" press="onSavePackingListPress" type="Emphasized" />
                    <Button text="Edit" icon="sap-icon://edit" press="onEditPackingListPress" type="Default"/>
                    <Button text="Proceed" press="onProceedStep1Press" type="Emphasized"/> -->
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
            <FlexBox wrap="Wrap" height="100%" renderType="Bare" direction="Column" binding="{PurchaseOrder}">
                <VBox renderType="Bare">
                    <FlexBox direction="Row" renderType="Bare" class="sapUiTinyMarginBottom">
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>poNumber}" />
                            <Text text="{PONumber}"/>
                        </VBox>
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>plantCode}" />
                            <Text text="{PlantCode}"/>
                        </VBox>
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>CreatedOn}" />
                            <Text text="{path:'CreatedAt',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }
                            }"/>
                        </VBox>
                    </FlexBox>
                </VBox>
            </FlexBox>
        </uxap:headerContent>
        <uxap:sections>

            <!-- Line Items Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>lineItems}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>lineItems}">
                        <uxap:blocks>
                            <lineItemsTable:LineItemsTable class="sapUxAPObjectPageSubSectionAlignContent" OnViewBOQItemsPress="onViewBOQItemsPress"/>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Line Items Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>packingListContains}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>packingListContains}">
                        <uxap:blocks>
                            <packingListContainsTable:PackingListContainsTable class="sapUxAPObjectPageSubSectionAlignContent" OnGeneratePackingList="onGeneratePackingList"/>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>
