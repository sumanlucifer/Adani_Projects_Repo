<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:tt="sap.ui.table" controllerName="com.agel.mmts.vendorpackinglistcreate.view.blocks.packingListDetails.lineItemsTable.LineItemsTableController">
    <Table items="{path: 'PackingListParentItems'}" autoPopinMode="true" growingThreshold="5" growing="true" fixedLayout="false">
        <columns>
            <Column>
                <Text text="{i18n>LineNumber}"/>
            </Column>
            <Column>
                <Text text="{i18n>MaterialCode}"/>
            </Column>
            <Column>
                <Text text="{i18n>MaterialName}"/>
            </Column>
            <Column hAlign="Center">
                <Text text="{i18n>OrderQuantity}"/>
            </Column>
            <Column hAlign="Center">
                <Text text="{i18n>MDCCApprovedQuantity}"/>
            </Column>
            <Column hAlign="Center">
                <Text text="{i18n>DispatchQuantity}"/>
            </Column>
            <Column>
                <Text text="{i18n>UOM}"/>
            </Column>
            <Column>
                <Text text="{i18n>Action}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{LineNumber}"/>
                    <ObjectIdentifier title="{MaterialCode}"/>
                    <Text text="{Name}"/>
                    <Text text="{Qty}"/>
                    <Text text="{MDCCApprovedQty}"/>
                    <Text text="{DispatchQty}"/>
                    <Text text="{UOM}"/>
                    <Link text="{i18n>ViewQRCode}" binding="{QrCode}" visible="{= ${QRNumber}}" press="onViewQRPress"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>


