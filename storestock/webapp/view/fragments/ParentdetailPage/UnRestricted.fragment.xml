<core:FragmentDefinition xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core">

    <smartTable:SmartTable class="sapUiResponsiveContentPadding" id="idParentUnRestrictedTable" editable="false" placeToolbarInTable="true" enableAutoBinding="false" beforeRebindTable="onBeforeRebindUnrestTable" entitySet="NewStockParentItemSet" showFullScreenButton="true" showRowCount="false" tableType="ResponsiveTable" demandPopin="false" useExportToExcel="false" useTablePersonalisation="true" useVariantManagement="false" initialNoDataText="{i18n>EnterPlant}">

        <!-- <smartTable:layoutData><FlexItemData growFactor="1" /></smartTable:layoutData> -->
        <Table id="unrestrictedTable" sticky="ColumnHeaders,HeaderToolbar" alternateRowColors="true" updateFinished="onUnrestrictedStockUpdateFinished">
            <columns>
                <Column >
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "LineNumber", "leadingProperty": "LineNumber",
                                                 "columnIndex": 0 ,"sortProperty": "LineNumber","filterProperty": "LineNumber"}'/>
                    </customData>
                    <Text text="{i18n>LineNumber}"/>
                </Column>

                <Column >
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Name", "leadingProperty": "Name",
                                                 "columnIndex": 1 ,"sortProperty": "Name","filterProperty": "Name"}'/>
                    </customData>
                    <Text text="{i18n>ParentName}"/>
                </Column>
                <!-- Company Code -->
                <Column>
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "MaterialCode", "leadingProperty": "MaterialCode",
                                                 "columnIndex": 2 ,"sortProperty": "MaterialCode","filterProperty": "MaterialCode"}'/>
                    </customData>
                    <Text text="{i18n>MaterialID}"/>
                </Column>

                <!-- Plant Code -->
                <Column demandPopin="true" minScreenWidth="Desktop">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Qty", "leadingProperty": "Qty",
                                                 "columnIndex": 3 ,"sortProperty": "Qty","filterProperty": "Qty"}'/>
                    </customData>
                    <Text text="{i18n>Quantity}"/>
                </Column>

                <!-- Issue Date -->
                <Column demandPopin="true" minScreenWidth="Tablet">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "UOM", "leadingProperty": "UOM",
                                                 "columnIndex": 4, "sortProperty": "UOM"}'/>
                    </customData>
                    <Text text="{i18n>UOM}"/>
                </Column>

                <Column>
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "CreatedAt", "leadingProperty": "CreatedAt",
                                                 "columnIndex": 7 ,"sortProperty": "CreatedAt","filterProperty": "CreatedAt"}'/>
                    </customData>
                    <Text text="Created At"/>
                </Column>


            </columns>
            <items>

                <ColumnListItem type="Navigation" press="onRestrictdParentTablePress">
                    <cells>
                        <ObjectIdentifier title="{LineNumber}"/>
                        <ObjectIdentifier text="{Name}"/>
                        <ObjectIdentifier text="{MaterialCode}"/>
                        <ObjectIdentifier text="{Qty}"/>
                        <ObjectIdentifier text="{UOM}"/>
                        <Text text="{path:'CreatedAt',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }
                        }"/>
                    </cells>
                </ColumnListItem>

            </items>
        </Table>
    </smartTable:SmartTable>

</core:FragmentDefinition>