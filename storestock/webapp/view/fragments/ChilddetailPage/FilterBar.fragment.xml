<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar">


    <fb:FilterBar id="filterbar1" reset="onResetFilters" search="onSearch" useToolbar="false" showGoOnFB="true" showRestoreOnFB="true">
        <fb:filterGroupItems>
          <fb:FilterGroupItem groupName="__$INTERNAL$" name="ChildMatName" label="{i18n>MaterialName}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                <fb:control>
                    <Input id="idChildMaterialName" placeholder="{i18n>EnterMatName}" liveChange="onFilterChange" showValueHelp="false">
                    </Input>
                </fb:control>
            </fb:FilterGroupItem>
           
            <fb:FilterGroupItem groupName="__$INTERNAL$" name="ChildMatCode" label="{i18n>MaterialID}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                <fb:control>
                    <Input id="idChildMaterialCode" placeholder="{i18n>EnterMatCode}" liveChange="onFilterChange" showValueHelp="false">
                    </Input>
                </fb:control>
            </fb:FilterGroupItem>
           
          
            
        </fb:filterGroupItems>
    </fb:FilterBar>

</core:FragmentDefinition>