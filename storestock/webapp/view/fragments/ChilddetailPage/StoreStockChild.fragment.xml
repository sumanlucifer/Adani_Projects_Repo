<core:FragmentDefinition xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core">

    <smartTable:SmartTable class="sapUiResponsiveContentPadding" id="idStoreStockChildTable" editable="false" placeToolbarInTable="true" enableAutoBinding="true" entitySet="StockParentItemSet" tableBindingPath="stockBoqItems" showFullScreenButton="true" showRowCount="false" tableType="ResponsiveTable" demandPopin="false" useExportToExcel="false" useTablePersonalisation="true" useVariantManagement="false" beforeRebindTable="onBeforeRebindRestTable">

        <!-- <smartTable:layoutData><FlexItemData growFactor="1" /></smartTable:layoutData> -->
        <Table sticky="ColumnHeaders,HeaderToolbar" updateFinished="onPurchaseOrderTableUpdateFinished" alternateRowColors="true">
            <columns>

                <Column  >
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "LineItemName", "leadingProperty": "LineItemName",
                                                 "columnIndex": 0 ,"sortProperty": "LineItemName","filterProperty": "LineItemName"}'/>
                    </customData>
                    <Text text="{i18n>ChildName}"/>
                </Column>


                <Column >
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "MaterialCode", "leadingProperty": "MaterialCode",
                                                 "columnIndex": 1 ,"sortProperty": "MaterialCode","filterProperty": "MaterialCode"}'/>
                    </customData>
                    <Text text="{i18n>MaterialCode}"/>
                </Column>

                <Column >
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "ReceivedQty", "leadingProperty": "ReceivedQty",
                                                 "columnIndex": 2 ,"sortProperty": "ReceivedQty","filterProperty": "ReceivedQty"}'/>
                    </customData>
                    <Text text="{i18n>ReceivedQty}"/>
                </Column>



                <Column  visible="{= ${StockParentItem>/ISRestricted} ? true : false }"  >

                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "IssuedQty", "leadingProperty": "IssuedQty",
                                                 "columnIndex": 3 ,"sortProperty": "IssuedQty","filterProperty": "IssuedQty"}'/>
                    </customData>
                    <Text text="{i18n>IssuedQty}"/>
                </Column>


                <Column visible="{= ${StockParentItem>/ISRestricted} ? true : false }"   >

                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "ReturnedQty", "leadingProperty": "ReturnedQty",
                                                 "columnIndex": 4 ,"sortProperty": "ReturnedQty","filterProperty": "ReturnedQty"}'/>
                    </customData>
                    <Text text="{i18n>ReturnedQty}"/>
                </Column>


                <Column visible="{= ${StockParentItem>/ISRestricted} ? true : false }"  >

                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "BalanceQty", "leadingProperty": "BalanceQty",
                                                 "columnIndex": 5 ,"sortProperty": "BalanceQty","filterProperty": "BalanceQty"}'/>
                    </customData>
                    <Text text="{i18n>BalQty}"/>
                </Column>





                <Column >
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "UOM", "leadingProperty": "UOM",
                                                 "columnIndex": 6 ,"sortProperty": "UOM","filterProperty": "UOM"}'/>
                    </customData>
                    <Text text="{i18n>UOM}"/>
                </Column>
            </columns>
            <items>

                <ColumnListItem >
                    <cells>




                        <ObjectIdentifier text="{LineItemName}"/>
                        <ObjectIdentifier text="{MaterialCode}"/>
                        <ObjectIdentifier text="{ReceivedQty}"/>

                        <ObjectIdentifier text="{IssuedQty}"/>
                        <ObjectIdentifier text="{ReturnedQty}"/>

                        <ObjectIdentifier text="{BalanceQty}"/>

                        <ObjectIdentifier text="{UOM}"/>

                    </cells>
                </ColumnListItem>

            </items>
        </Table>
    </smartTable:SmartTable>

</core:FragmentDefinition>