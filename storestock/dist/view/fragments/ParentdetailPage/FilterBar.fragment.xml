<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar">


    <fb:FilterBar id="filterbar" reset="onResetFilters" search="onSearch" useToolbar="false" showGoOnFB="true" showRestoreOnFB="true">
        <fb:filterGroupItems>


            <fb:FilterGroupItem groupName="__$INTERNAL$" name="ParentName" label="{i18n>MaterialName}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                <fb:control>
                    <Input id="idParentMaterialName" placeholder="Enter Material Name" liveChange="onFilterChange" showValueHelp="false">
                    </Input>
                </fb:control>
            </fb:FilterGroupItem>

            <fb:FilterGroupItem groupName="__$INTERNAL$" name="ParentCode" label="{i18n>MaterialID}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                <fb:control>
                    <Input id="idParentMaterialCode" placeholder="Enter Parent Code" liveChange="onFilterChange" showValueHelp="false">
                    </Input>
                </fb:control>
            </fb:FilterGroupItem>

            <fb:FilterGroupItem groupName="__$INTERNAL$" name="PlantCode" label="{i18n>PlantCode}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                <fb:control>


                    <Select width="6rem" id="idSelPlant" forceSelection="false" selectedKey="{qrAssistantModel>/reason}" items="{
						    path: '/MasterPlantDetailSet'						    
					    }">
                        <core:Item key="{PlantId}" text="{PlantId}" />
                    </Select>

                      <!-- <Select width="6rem" id="idSelPlant" forceSelection="false"  items="{PlantModel>/PlntItems}">
                        <core:Item key="{PlantModel>key}" text="{PlantModel>value}" />
                    </Select> -->
                </fb:control>
            </fb:FilterGroupItem>

        </fb:filterGroupItems>
    </fb:FilterBar>

</core:FragmentDefinition>