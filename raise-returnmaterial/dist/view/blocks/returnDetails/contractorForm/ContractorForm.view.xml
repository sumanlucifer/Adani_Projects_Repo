<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m">

    <f:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="4" columnsXL="4" binding="{Contractor}" 
        singleContainerFullSize="true" class="style-RemoveTitleHeight">
        <f:content>
            <!-- <core:Title  /> -->

            <Label text="{i18n>ContractorId}" />
            <Text text="{ID}" />

            <Label text="{i18n>ContractorName}" />
            <Text text="{Name}" />       
            
            <Label text="{i18n>PlantSite-Location}" />
            <Text text="{PlantSiteLocation}"/>
            
            <Label text="{i18n>ActivePeriod}" />
            <Text text="{ActivePeriod}"/>
            
             <!-- <core:Title />  -->
            <Label text="{i18n>Materials}" />
            <Text text="{Materials}"/>
            <!-- <ExpandableText binding="{Address}" text="{parts: [{path: 'Street'}, {path: 'City'}, {path: 'State'}, {path: 'Country'}, {path: 'pinCode'}]}" 
            overflowMode="InPlace"/> -->
            <Label text="{i18n>Description}" />
            <Text text="{Description}"/>
            
            <Label text="{i18n>Service-Covered}" />
            <Text text="{ServicesCovered}"/>            
            
        </f:content>
    </f:SimpleForm>

</mvc:View>
