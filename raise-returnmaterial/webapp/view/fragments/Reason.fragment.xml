<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="Reason For Material Return">
        <l:Grid defaultSpan="L12 M12 S12" width="auto">
            <l:content>
                <f:SimpleForm minWidth="1024" maxContainerCols="2" editable="false" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="2" columnsM="2">
                    <Label text="Enter Reason" required="true"></Label>
                    <!-- <Input value="{qrAssistantModel>/reason}"></Input> -->

                    <Select id="idSelReason" forceSelection="false"
                        valueState="{qrAssistantModel>/reasonValueState}"  
                        selectedKey="{qrAssistantModel>/reason}"
                        change="onReasonSelectionChange"
					    items="{
						    path: '/ReasonToReturnMaterialSet'						    
					    }">
					        <core:Item key="{ID}" text="{Name}" />
				    </Select>

                    <Label text="Comments" required="true"></Label>
                    <TextArea id="idTxtComment" value="{qrAssistantModel>/comment}"
                         valueState="{qrAssistantModel>/commentValueState}"
                         liveChange="onLiveChangeComment" />
                </f:SimpleForm>
            </l:content>
        </l:Grid>
        
        <beginButton>
            <Button text="Send" press="onSendAssistanceRequestPress"></Button>
        </beginButton>
        <endButton>           
            <Button text="Cancel" press="onCancelAssistanceRequestPress"></Button>            
        </endButton>
    </Dialog>
</core:FragmentDefinition>