<core:FragmentDefinition xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core">

    <smartTable:SmartTable class="sapUiResponsiveContentPadding" editable="false" placeToolbarInTable="true" enableAutoBinding="true" entitySet="ReturnMaterialSet" showFullScreenButton="true" showRowCount="true" header="Return Requests" tableType="ResponsiveTable" demandPopin="false" useExportToExcel="false" useTablePersonalisation="true" useVariantManagement="false" beforeRebindTable="onBeforeRebindReservationTable" ignoreFromPersonalisation="HeaderText,BillOfLading,IsArchived,CreatedAt,CreatedBy,UpdatedBy,UpdatedAt">

        <Table sticky="ColumnHeaders,HeaderToolbar" alternateRowColors="true">
            <columns>
                <Column>
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "ID", "leadingProperty": "ID",
                                                 "columnIndex": 0 ,"sortProperty": "ID","filterProperty": "ID"}'/>
                    </customData>
                    <Text text="{i18n>ID}"/>
                </Column>

                <!-- CreatedAt -->
                <Column demandPopin="true" minScreenWidth="Tablet">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "MaterialDocumentNumber", "leadingProperty": "MaterialDocumentNumber",
                                                 "columnIndex": 1, "sortProperty": "MaterialDocumentNumber"}'/>
                    </customData>
                    <Text text="{i18n>MaterialDocumentNumber}"/>
                </Column>

                <Column demandPopin="true" minScreenWidth="Tablet">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "GatePassNumber", "leadingProperty": "GatePassNumber",
                                    "columnIndex": 2, "sortProperty": "GatePassNumber", "filterProperty": "GatePassNumber"}'/>
                    </customData>
                    <Text text="{i18n>GatePassNumber}" />
                </Column>

                <!-- Status -->
                <Column demandPopin="true" minScreenWidth="Tablet">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "ReservationNumber", "leadingProperty": "ReservationNumber",
                                                 "columnIndex": 3, "sortProperty": "ReservationNumber", "filterProperty": "ReservationNumber"}'/>
                    </customData>
                    <Text text="{i18n>ReservationNumber}"/>
                </Column>
                <!-- RequestDate -->
                <Column>
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "DocumentDate", "leadingProperty": "DocumentDate",
                                                 "columnIndex": 4 ,"sortProperty": "DocumentDate","filterProperty": "DocumentDate"}'/>
                    </customData>
                    <Text text="{i18n>DocumentDate}"/>
                </Column>

                <!-- Reason -->
                <Column demandPopin="true" minScreenWidth="Tablet">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "PostingDate", "leadingProperty": "PostingDate",
                                    "columnIndex": 5, "sortProperty": "PostingDate", "filterProperty": "PostingDate"}'/>
                    </customData>
                    <Text text="{i18n>PostingDate}" />
                </Column>

                <!-- Comment -->


            </columns>
            <items>

                <ColumnListItem type="Navigation" press="onReservationRequestPress">
                    <cells>
                        <ObjectIdentifier text="{ID}"/>
                        <Text text="{MaterialDocumentNumber}"></Text>

                        <Text text="{GatePassNumber}"/>
                        <Text text="{ReservationNumber}"/>
                        <Text text="{path:'DocumentDate',
                                    type: 'sap.ui.model.type.DateTime',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy HH:mm:ss'
				                     }    
                        }"/>
                        <Text text="{path:'PostingDate',
                                    type: 'sap.ui.model.type.DateTime',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy HH:mm:ss'
				                     }    
                        }"/>

                    </cells>
                </ColumnListItem>

            </items>
        </Table>
    </smartTable:SmartTable>

</core:FragmentDefinition>