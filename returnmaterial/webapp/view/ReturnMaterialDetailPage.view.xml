<mvc:View xmlns:f2="sap.f"
    xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns:ui="sap.ui.table"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m" controllerName="com.agel.mmts.returnmaterial.controller.ReturnMaterialDetailPage"
    xmlns:contractorForm ="com.agel.mmts.returnmaterial.view.blocks.returnDetails.contractorForm"
    xmlns:lineItemsForm="com.agel.mmts.returnmaterial.view.blocks.returnDetails.lineItemsForm" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" busy="{objectViewModel>/busy}">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:breadcrumbs>
                    <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>returnSummary}">
                        <Link text="{i18n>returnMaterial}" press=".handleToAllPOBreadcrumPress"/>
                    </Breadcrumbs>
                </uxap:breadcrumbs>
                <uxap:expandedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>returnSummary}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{MaterialDocumentNumber}" wrapping="true" titleStyle="H3" />
                    </FlexBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>returnSummary}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{MaterialDocumentNumber}" wrapping="true" titleStyle="H3"/>
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedContent></uxap:expandedContent>
                <uxap:snappedTitleOnMobile>
                    <Title text="{i18n>returnSummary}- {MaterialDocumentNumber}" wrapping="true" titleStyle="Auto"/>
                </uxap:snappedTitleOnMobile>
                <uxap:actions>
                    <VBox visible="true">
                        <Button text="Cancel Return" press="onCancelReturn" type="Emphasized"/>
                    </VBox>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
            <FlexBox wrap="Wrap" height="100%" renderType="Bare" direction="Column">
                <VBox renderType="Bare">
                    <FlexBox direction="Row" renderType="Bare" class="sapUiTinyMarginBottom">
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="Posting Date" />
                            <Text text="{path:'PostingDate',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy HH:mm:ss'
				                     }
                            }"/>
                        </VBox>

                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="Delivery Note" />
                            <Text text="{DeliveryNote}"/>
                        </VBox>

                         <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="ReservationNumber" />
                            <Text text="{ReservationNumber}"/>
                        </VBox>

                        <VBox binding="{ReturnMaterialReserve}">
                        </VBox>
                    </FlexBox>
                </VBox>

            </FlexBox>
        </uxap:headerContent>
        <uxap:sections>

            <!-- Line Items Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>lineItems}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>lineItems}">
                        <VBox>
                            <Table id="idBOQItemTable" items="{path: 'ReturnMaterialReserve/ReturnedMaterialParent'}" autoPopinMode="true" growingThreshold="5" growing="true" fixedLayout="false">

                                <columns>
                                    <Column>
                                        <Text text="Line Number"/>
                                    </Column>
                                    <Column>
                                        <Text text="Material Code"/>
                                    </Column>
                                    <Column>
                                        <Text text="Name"/>
                                    </Column>
                                    <Column>
                                        <Text text="Quantity"/>
                                    </Column>
                                    <Column>
                                        <Text text="UOM"/>
                                    </Column>
                                    <Column>
                                        <Text text="Plant"/>
                                    </Column>
                                    <Column>
                                        <Text text="Storage Location"/>
                                    </Column>
                                    <Column>
                                        <Text text="Batch Number"/>
                                    </Column>
                                    <Column>
                                        <Text text="Valuation Type"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{ItemNumber}"/>
                                            <ObjectIdentifier title="{MaterialCode}"/>
                                            <Text text="{Name}"/>
                                            <Text text="{Name}"/>
                                            <Text text="{Qty}"/>
                                            <Text text="{BaseUnit}"/>
                                            <Text text="{Plant}"/>
                                            <Text text="{BatchNumber}"/>
                                            <Text text="{ValuationType}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>