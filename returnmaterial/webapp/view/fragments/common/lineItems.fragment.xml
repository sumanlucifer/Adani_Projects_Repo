<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified">

    <Table width="auto" growing="true" growingThreshold="5" items="{path: 'ParentLineItems'}" fixedLayout="false">
        <columns>
            <Column demandPopin="true" minScreenWidth="Desktop" hAlign="Center">
                <Text text="{i18n>LineItem}" wrapping="true" wrappingType="Hyphenated"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Desktop">
                <Text text="{i18n>LineItemCode}" wrapping="true" wrappingType="Hyphenated"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Desktop">
                <Text text="{i18n>QtyRecieved}" wrapping="true"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Desktop">
                <Text text="{i18n>ReturnQty}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{LineNumber}" wrappingType="Hyphenated"/>
                    <ObjectIdentifier title="{MaterialCode}"/>
                    <Text text="{Name}" wrappingType="Hyphenated"/>
                    <ExpandableText text="{Description}" maxCharacters="20" overflowMode="Popover"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>

</core:FragmentDefinition>