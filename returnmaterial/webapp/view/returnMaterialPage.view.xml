<mvc:View controllerName="com.agel.mmts.returnmaterial.controller.returnMaterialPage" height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f">
    <f:DynamicPage headerExpanded="true" busy="{objectViewModel>/busy}">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title id="pageTitle" text="{i18n>Raised-Request}"/>
                </f:heading>
                <f:actions>
                   <Button text="Raise Return Material Request" press="onConfirmRequest" type="Emphasized"/>
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
            
                <f:content>
<SearchField width="20%" ></SearchField>

                </f:content>
              
            </f:DynamicPageHeader>
        </f:header>
        <!-- DynamicPage Content -->
        <f:content>


            <core:Fragment fragmentName="com.agel.mmts.returnmaterial.view.fragments.RequestTable" type="XML"/>

        </f:content>
    </f:DynamicPage>
</mvc:View>

