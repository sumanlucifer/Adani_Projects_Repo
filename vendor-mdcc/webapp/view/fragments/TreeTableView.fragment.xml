<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    displayBlock="true"
	xmlns:ui="sap.ui.table">
    <Dialog title="">
	<ui:TreeTable id="TreeTableBasicView"
                            rows="{path:'TreeTableModelView>/', parameters: {arrayNames:['ChildItemsView']}}"
                            selectionMode="None" enableSelectAll="false"
                            title="{i18n>TreeTableViewTitle}" ariaLabelledBy="title" 
                            rowsUpdated="onRowsUpdated">
		<ui:columns>
			<ui:Column width="5%">
				<Label text="{i18n>ID}"/>
				<ui:template>
					<Text text="{TreeTableModelView>ID}" wrapping="false" />
				</ui:template>
			</ui:Column>

            <ui:Column width="8%">
				<Label text="{i18n>materialCode}"/>
				<ui:template>
					<Text text="{TreeTableModelView>MaterialCode}" wrapping="false" />
				</ui:template>
			</ui:Column>

			<ui:Column width="8%">
				<Label text="{i18n>Name}"/>
				<ui:template>
					<Text text="{TreeTableModelView>Name}" wrapping="false" />
				</ui:template>
			</ui:Column>

			<ui:Column width="12%">
				<Label text="{i18n>Description}"/>
				<ui:template>
                    <ExpandableText text="{TreeTableModelView>Description}" overflowMode="Popover" maxCharacters="32"/>
				</ui:template>
			</ui:Column>	

			<ui:Column width="5%">
				<Label text="{i18n>Qty}"/>
				<ui:template>
					<Text text="{TreeTableModelView>Qty}" wrapping="false" />
				</ui:template>
			</ui:Column>

			<ui:Column width="8%">
				<Label text="{i18n>ApprovedQty}"/>
				<ui:template>
					<HBox justifyContent="SpaceAround">
						<Text text="{TreeTableModelView>MDCCApprovedQty}" />
					</HBox>
				</ui:template>
			</ui:Column>

			<ui:Column width="5%">
				<Label text="{i18n>UOM}"/>
				<ui:template>
					<Text text="{TreeTableModelView>UOM}" wrapping="false" />
				</ui:template>
			</ui:Column>

		</ui:columns>
	</ui:TreeTable>
    </Dialog>
</core:FragmentDefinition>
