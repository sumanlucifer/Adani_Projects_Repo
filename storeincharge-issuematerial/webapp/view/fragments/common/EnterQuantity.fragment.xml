<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core" >
    <Dialog class="testTitle">
        <content>
        <VBox class="sapUiResponsiveMargin">
            <Table width="auto" growing="true" growingThreshold="10" fixedLayout="false" >
                <headerToolbar>
					<OverflowToolbar>
						<ToolbarSpacer />
					</OverflowToolbar>
				</headerToolbar>
                <columns>
                    <Column demandPopin="true" minScreenWidth="Tablet">
                        <Text text="{i18n>name}" wrapping="true"/>
                    </Column>
                    <Column demandPopin="true" minScreenWidth="Tablet">
                        <Text text="{i18n>reservedQty}" wrapping="true"/>
                    </Column>
                    <Column demandPopin="true" minScreenWidth="Tablet">
                        <Text text="{i18n>issueQty}" wrapping="true"/>
                    </Column>
                    <Column demandPopin="true" minScreenWidth="Tablet">
                        <Text text="{i18n>QtyAvailableforIssue}" wrapping="true"/>
                    </Column>
                    <Column demandPopin="true" minScreenWidth="Tablet">
                        <Text text="{i18n>UOM}" wrapping="true"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{Name}"/>
                            <Text text="{ReservedQty}"/>
                            <ObjectIdentifier title="{QtyRemainingToIssue}" />    
                            <Input value="{IssuedQty}" type="Number" id="idInputIssuedQty" liveChange="onIssuedQtyLivechange"/>
                            <Text text="{BaseUnit}​​​"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
        </content>
        <beginButton>
            <Button id="idSaveQtyBTN" text="{i18n>save}" enabled="false"
                press="onEnterQuantityDialogClosePress" type="Emphasized"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>cancel}" press="onEnterQuantityDialogCancelPress"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>