<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:scan="sap.ndc" >
    <Dialog class="testTitle">
        <content>
            <VBox class="sapUiResponsiveMargin">
                <HBox alignItems="Center">
                    <Input id="idInputQRCode" width="100%" placeholder="Enter QR Number" liveChange="onQRCodeSuggestionSelected" class="sapUiSmallMarginEnd" enabled="{oViewHandlingModel>/unloadQrCode}"/>
                    <Button id="idQRBtn" text="{i18n>submit}" type="Emphasized" press="onPressSubmitQRCode" class="sapUiSmallMargin" enabled="{= ${oViewHandlingModel>/unloadQrCode} ? true : false}"/>
                </HBox>
                <HBox alignItems="Center">
                    <Text text="{i18n>or}" class="sapUiSmallMarginBegin"/>
                </HBox>
                <HBox alignItems="Center" class="sapUiTinyMarginTop">
                     <scan:BarcodeScannerButton id="idQRSubmit" scanSuccess="onScanSuccess" scanFail="onScanError"/>
                     <!-- <Button id="idQRSubmit" text="{i18n>scanQrCode}" type="Emphasized" press="onPressScanQRCode" class="sapUiSmallMargin" enabled="{= ${oViewHandlingModel>/unloadQrCode} ? false : true}"/> -->
                </HBox>
            </VBox>
        </content>
        <endButton>
            <Button text="{i18n>close}" press="onQRCodeScanDialogClosePress" type="Emphasized"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>