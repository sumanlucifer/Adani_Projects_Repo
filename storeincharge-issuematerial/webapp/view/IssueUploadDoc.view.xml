                                            type: 'sap.ui.model.type.Date',
                                            formatOptions: {
                                                pattern: 'MMMM dd, yyyy'
                                            }
                                        }"/>
                                        <Text text="{ReservedQty}" binding="{IssuedMaterialReservedItem}"/>
                                        <ObjectIdentifier title="{QtyRemainingToIssue}" binding="{IssuedMaterialReservedItem}" />   
                                        <ObjectIdentifier title="{IssuedQty}" />
                                        <Text text="{BaseUnit}" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table> -->
                        <tt:TreeTable
                            id="idReserveMatTreeTable"
                            rows="{path:'/TreeTableData', model: 'objectViewModel', parameters: {arrayNames:['BoqItems']}}"
                            selectionMode="None"
                            ariaLabelledBy="title">
                            <tt:Column>
                                <Label text="{i18n>name}"/>
                                <tt:template>
                                    <Text text="{objectViewModel>Name}" wrapping="true" wrappingType="Hyphenated"/>
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
                                <Label text="{i18n>materialCode}"/>
                                <tt:template>
                                    <Text text="{objectViewModel>MaterialCode}" wrapping="false" />
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
                                <Label text="{i18n>storageLocation}"/>
                                <tt:template>
                                    <Text text="{objectViewModel>StorageLocation}" wrapping="false" />
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
                                <Label text="{i18n>plant}"/>
                                <tt:template>
                                    <Text text="{objectViewModel>Plant}" />
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
                                <Label text="{i18n>createdAt}"/>
                                <tt:template>
                                    <Text text="{path:'objectViewModel>CreatedAt',
                                            type: 'sap.ui.model.type.Date',
                                            formatOptions: {
                                                pattern: 'MMMM dd, yyyy'
                                            }
                                        }"/>
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
                                <Label text="{i18n>reservedQty}"/>
                                <tt:template>
                                    <Text text="{objectViewModel>ReservedQty}"/>
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
                                <Label text="{i18n>issueQty}"/>
                                <tt:template>
                                    <ObjectIdentifier title="{objectViewModel>IssuedQty}" />
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
                                <Label text="{i18n>UOM}"/>
                                <tt:template>
                                    <Text text="{objectViewModel>BaseUnit}" wrapping="false" />
                                </tt:template>
                            </tt:Column>
                        </tt:TreeTable>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>UploadDetails}">
                <uxap:subSections>
                      <uxap:ObjectPageSubSection title="{i18n>TotalGrossWeight(MT)}">
                        <Input type="Number" id="idTotalGrossWeight" width="20%" required="true"/>
                      </uxap:ObjectPageSubSection>
                      <uxap:ObjectPageSubSection title="{i18n>UploadIssueSlip}">
                            <UploadCollection class="uploadClasstest" multiple="true" fileSizeExceed="onFileSizeExceed" typeMissmatch="onTypeMissmatch" uploadComplete="onUploadComplete" beforeUploadStarts="onBeforeUploadStarts" items="{
                                    path:'localAttachmentModel>/items',
                                    templateShareable: false}" mode="None" selectionChange="onAttachmentChange" instantUpload="false" change="onAttachmentChange" fileDeleted="onFileDeleted">
                                    <items>
                                        <UploadCollectionItem url="{parts: ['localAttachmentModel>/FileName','localAttachmentModel>/Content']}" enableEdit="false" enableDelete="false" visibleDelete="false" visibleEdit="false" fileName="{localAttachmentModel>FileName}" deletePress="onDeleteDocumentPress">
                                        </UploadCollectionItem>
                                    </items>
                                </UploadCollection> 
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>