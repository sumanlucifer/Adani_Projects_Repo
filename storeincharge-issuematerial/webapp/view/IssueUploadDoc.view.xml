                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>name}" wrapping="true" wrappingType="Hyphenated"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>materialCode}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>storageLocation}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>plant}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>wbsnumber}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>lineItemNumber}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>createdAt}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>reservedQty}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>QtyAvailableforIssue}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>issueQty}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>UOM}"/>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <ObjectIdentifier title="{Name}"/>
                                        <Text text="{MaterialCode}"/>
                                        <Text text="{StorageLocation}"/>
                                        <Text text="{Plant}"/>
                                        <Text text="{WBSNumber}"  binding="{IssuedMaterialReservedItem/IssueMaterialReserve}"/>
                                        <Text text="{ItemNumber}" binding="{IssuedMaterialReservedItem}"/>
