<mvc:View xmlns:f2="sap.f"
    xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m" controllerName="com.agel.mmts.storeinchargeissuematerial.controller.IssueUploadDoc" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" busy="{objectViewModel>/busy}">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:breadcrumbs>
                    <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>issueMaterialSummary}">
                        <Link text="{i18n>issueMaterial}" press="handleToIssueMatBreadcrumPress"/>
                    </Breadcrumbs>
                </uxap:breadcrumbs>
                <uxap:expandedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>issueMaterial}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{SONumber}" wrapping="true" titleStyle="H3" />
                    </FlexBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>issueMaterial}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{SONumber}" wrapping="true" titleStyle="H3"/>
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedContent></uxap:expandedContent>
                <uxap:snappedTitleOnMobile>
                    <Title text="{i18n>SONumber}- {SONumber}" wrapping="true" titleStyle="Auto"/>
                </uxap:snappedTitleOnMobile>
                <uxap:actions>
                    <HBox visible="true">
                        <Button text="Confirm Issue Material" press="onPressConfirm" type="Emphasized"/>
                    </HBox>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
        </uxap:headerContent>

        <uxap:sections>

            <!-- Line Items Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>lineItems}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>lineItems}">
                        <Table width="auto" growing="true" growingThreshold="5" fixedLayout="false" items="{IssuedMaterialParents}">     
                            <headerToolbar>
                                <OverflowToolbar id="otbSubheader">
                                    <Title text="Products" level="H2" />
                                    <ToolbarSpacer />
                                    <!-- <Button id="reserveButton" text="Reserve" type="Transparent" press="onPressReserve" visible="{objectViewModel>reserveButton}" /> -->
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>name}" wrapping="true" wrappingType="Hyphenated"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>issueQty}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>UOM}"/>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <ObjectIdentifier title="{Name}" />
                                        <Text text="{IssuedQty}" />
                                        <Text text="{BaseUnit}" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>uploadDoc}">
                <uxap:subSections>
                      <uxap:ObjectPageSubSection title="{i18n>attachments}">
                        <uxap:blocks>
                        <VBox>
                            <f:SimpleForm id="idDocUploadForm"
                                editable="false"
                                layout="ResponsiveGridLayout"
                                labelSpanXL="1"
                                labelSpanL="2"
                                labelSpanM="4"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="0"
                                emptySpanL="0"
                                emptySpanM="0"
                                emptySpanS="0"
                                columnsXL="2"
                                columnsL="2"
                                columnsM="1"
                                singleContainerFullSize="true" >
                                <f:content>
                                <Label text="Total Gross Weight (MT)" />
                                <Input type="Number" id="idTotalGrossWeight" width="20%"/>
                                <Label text="Upload Issue Slip" />
                         <!-- <Text class="redColor" /> -->
                                <UploadCollection class="uploadClasstest" multiple="true" fileSizeExceed="onFileSizeExceed" typeMissmatch="onTypeMissmatch" uploadComplete="onUploadComplete" beforeUploadStarts="onBeforeUploadStarts" items="{
                                    path:'localAttachmentModel>/items',
                                    templateShareable: false}" mode="None" selectionChange="onAttachmentChange" instantUpload="false" change="onAttachmentChange" fileDeleted="onFileDeleted">
                                    <items>
                                        <UploadCollectionItem url="{parts: ['localAttachmentModel>/FileName','localAttachmentModel>/Content']}" enableEdit="false" enableDelete="false" visibleDelete="false" visibleEdit="false" fileName="{localAttachmentModel>FileName}" deletePress="onDeleteDocumentPress">
                                        </UploadCollectionItem>
                                    </items>
                                </UploadCollection>
                                </f:content>
                            </f:SimpleForm>
                            </VBox>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>