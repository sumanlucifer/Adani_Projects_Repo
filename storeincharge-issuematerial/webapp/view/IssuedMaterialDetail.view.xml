<mvc:View xmlns:f2="sap.f"
    xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m" controllerName="com.agel.mmts.storeinchargeissuematerial.controller.IssuedMaterialDetail" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" busy="{objectViewModel>/busy}">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:breadcrumbs>
                    <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>issueMaterialSummary}">
                        <Link text="{i18n>issueMaterial}" press="handleToIssueMatBreadcrumPress"/>
                    </Breadcrumbs>
                </uxap:breadcrumbs>
                <uxap:expandedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>issueMaterial}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{SONumber}" wrapping="true" titleStyle="H3" />
                    </FlexBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>issueMaterial}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{SONumber}" wrapping="true" titleStyle="H3"/>
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedContent></uxap:expandedContent>
                <uxap:snappedTitleOnMobile>
                    <Title text="{i18n>SONumber}- {SONumber}" wrapping="true" titleStyle="Auto"/>
                </uxap:snappedTitleOnMobile>
                <uxap:actions>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
        </uxap:headerContent>
        <uxap:sections>
            <!-- Line Items Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>lineItems}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>lineItems}">
                        <tt:TreeTable
                            id="idReserveMatTreeTable"
                            rows="{path:'/TreeTableData', model: 'objectViewModel', parameters: {arrayNames:['BoqItems']}}"
                            selectionMode="None"
                            ariaLabelledBy="title">
                            <tt:Column>
                                <Label text="{i18n>name}"/>
                                <tt:template>
                                    <Text text="{objectViewModel>Name}" wrapping="true" wrappingType="Hyphenated"/>
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
                                <Label text="{i18n>materialCode}"/>
                                <tt:template>
                                    <Text text="{objectViewModel>MaterialCode}" wrapping="false" />
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
                                <Label text="{i18n>storageLocation}"/>
                                <tt:template>
                                    <Text text="{objectViewModel>StorageLocation}" wrapping="false" />
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
                                <Label text="{i18n>plant}"/>
                                <tt:template>
                                    <Text text="{objectViewModel>Plant}" />
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
                                <Label text="{i18n>createdAt}"/>
                                <tt:template>
                                    <Text text="{path:'objectViewModel>CreatedAt',
                                            type: 'sap.ui.model.type.Date',
                                            formatOptions: {
                                                pattern: 'MMMM dd, yyyy'
                                            }
                                        }"/>
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
                                <Label text="{i18n>reservedQty}"/>
                                <tt:template>
                                    <Text text="{objectViewModel>ReservedQty}"/>
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
                                <Label text="{i18n>issueQty}"/>
                                <tt:template>
                                    <ObjectIdentifier title="{objectViewModel>IssuedQty}" />
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
                                <Label text="{i18n>UOM}"/>
                                <tt:template>
                                    <Text text="{objectViewModel>BaseUnit}" wrapping="false" />
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
                                <Label text="{i18n>status}"/>
                                <tt:template>
                                    <ObjectStatus text="{objectViewModel>Status}" state="{= ${objectViewModel>Status} === 'ISSUED' ? 'Success' : ${objectViewModel>Status} === 'RESERVED' ? 'Information' : 'Error'}" visible="{= ${objectViewModel>Status}.length>0 ? true : false }"/>
                                </tt:template>
                            </tt:Column>
                        </tt:TreeTable>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>