<mvc:View xmlns:f2="sap.f"
    xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m" controllerName="com.agel.mmts.storeinchargeissuematerial.controller.IssuedMaterialDetail" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" busy="{objectViewModel>/busy}">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:breadcrumbs>
                    <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>issueMaterialSummary}">
                        <Link text="{i18n>issueMaterial}" press="handleToIssueMatBreadcrumPress"/>
                    </Breadcrumbs>
                </uxap:breadcrumbs>
                <uxap:expandedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>issueMaterial}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{SONumber}" wrapping="true" titleStyle="H3" />
                    </FlexBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>issueMaterial}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{SONumber}" wrapping="true" titleStyle="H3"/>
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedContent></uxap:expandedContent>
                <uxap:snappedTitleOnMobile>
                    <Title text="{i18n>SONumber}- {SONumber}" wrapping="true" titleStyle="Auto"/>
                </uxap:snappedTitleOnMobile>
                <uxap:actions>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
        </uxap:headerContent>

        <uxap:sections>

            <!-- Line Items Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>lineItems}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>lineItems}">
                        <Table width="auto" growing="true" growingThreshold="5" fixedLayout="false" items="{IssuedMaterialParents}">     
                            <headerToolbar>
                                <OverflowToolbar id="otbSubheader">
                                    <Title text="Products" level="H2" />
                                    <ToolbarSpacer />
                                    <!-- <Button id="reserveButton" text="Reserve" type="Transparent" press="onPressReserve" visible="{objectViewModel>reserveButton}" /> -->
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>name}" wrapping="true" wrappingType="Hyphenated"/>
                                </Column>
                                 <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="Material Code"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="Plant"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="Storage Location"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="Movement Type"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="Goods Recipient"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="WBS Number"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="Unloading Point"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>issueQty}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="Reserved Qty"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>status}"/>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <ObjectIdentifier title="{Name}"/>
                                        <Text text="{IssuedQty}"/>
                                         <Text text="{MaterialCode}"/>
                                        <Text text="{Plant}"/>
                                        <Text text="{StorageLocation}"/>
                                        <Text text="{MovementType}" />
                                        <Text text="{GoodsRecipient}" binding="{IssueMaterialReserve}"/>
                                        <Text text="{WBSNumber}" binding="{IssueMaterialReserve}"/>
                                        <Text text="{UnloadingPoint}"/>
                                        <Text text="{ReservedQty}"/>
                                        <ObjectStatus text="{Status}" state="{= ${Status} === 'ISSUED' ? 'Success' : ${Status} === 'RESERVED' ? 'Information' : 'Error'}" visible="{= ${Status}.length>0 ? true : false }"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>