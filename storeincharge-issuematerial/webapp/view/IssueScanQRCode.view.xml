                            rows="{path:'/', model: 'IssueMatModel', parameters: {arrayNames:['IssueMaterialPostingBOQs']}}"
                            selectionMode="None"
                            ariaLabelledBy="title">
                            <tt:Column>
                                <Label text="{i18n>name}"/>
                                <tt:template>
                                    <Text text="{IssueMatModel>Name}" wrapping="true" wrappingType="Hyphenated"/>
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
                                <Label text="{i18n>materialCode}"/>
                                <tt:template>
                                    <Text text="{IssueMatModel>MaterialCode}" wrapping="false" />
                                </tt:template>
                            </tt:Column>
                            <tt:Column>
