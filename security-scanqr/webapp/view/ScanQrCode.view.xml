<mvc:View xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns:scan="sap.ndc"
    xmlns="sap.m" controllerName="com.agel.mmts.securityscanqr.controller.ScanQrCode" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" showFooter="true">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:content>
                    <!-- <HBox alignItems="Center">
                        <Text text="Domestic Entry"/>
                    </HBox> -->
                    <HBox alignItems="Center">
                        <Input id="idInputQRCode" width="120%" placeholder="{i18n>EntrPackingListQR}" liveChange="onQRCodeSuggestionSelected" class="sapUiTinyMarginEnd" enabled="{oViewModel>/inputQRCode}"/>
                        <Button id="idQRBtn" text="{i18n>Submit}" type="Emphasized" press="onPressSubmitQRCode" class="sapUiLargeMarginBegin" enabled="{oViewModel>/submitQRCode}"/>
                    </HBox>
                    <HBox alignItems="Center">
                        <Text text="{i18n>OR}" class="sapUiTinyMargin"/>
                    </HBox>
                    <HBox alignItems="Center">
                       <!--  <Button id="idQRSubmit" text="Scan QR Code" type="Emphasized" press="onPressScanQRCode" enabled="{oViewModel>/scanQRCode}"/> -->
                         <!-- <Button id="idQRSubmit" text="Scan QR Code" type="Emphasized" press="onScan" enabled="{oViewModel>/scanQRCode}"/> -->
                         <scan:BarcodeScannerButton id="idQRSubmit" tooltip="{i18n>ScanQRCode}" scanSuccess="onScanSuccess" scanFail="onScanError" inputLiveUpdate="onScanLiveupdate" visible="{oViewModel>/scanQRCode}"/>
                    </HBox>
                    <HBox alignItems="Center">
                        <Text text="{i18n>OR}" class="sapUiTinyMargin"/>
                    </HBox>

                    <HBox alignItems="Center">
                        <Input id="idInvoiceNum" width="120%" showSuggestion="false" showValueHelp="false" placeholder="{i18n>EnterInvoiceNumber}" liveChange="onInvoiceSuggestionSelected" class="sapUiTinyMarginEnd" enabled="{oViewModel>/inputInvoiceCode}"/>
                        <Button id="idInvBtn" text="{i18n>Submit}" type="Emphasized" press="onPressSubmitInvoiceNumber" class="sapUiLargeMarginBegin" enabled="{oViewModel>/submitInvoiceCode}"/>
                    </HBox>
                </uxap:content>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
        </uxap:headerContent>
        <uxap:sections>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>