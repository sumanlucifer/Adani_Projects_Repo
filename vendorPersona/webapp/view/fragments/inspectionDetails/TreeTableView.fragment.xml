<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    displayBlock="true"
	xmlns:ui="sap.ui.table">
	<Dialog>
		<ui:TreeTable id="TreeTableBasicView"
                rows="{path:'TreeTableModelView>/',parameters: {arrayNames:['ChildItemsView']}}"
                collapseRecursive="true" 
                selectionMode="None" enableSelectAll="false"
                 ariaLabelledBy="title">
			<ui:columns>
				<!-- <ui:Column width="5%">
					<Label text="ID"/>
					<ui:template>
						<Text text="{TreeTableModelView>ID}" wrapping="false" />
					</ui:template>
				</ui:Column> -->
                <ui:Column width="5%">
					<Label text="{i18n>LineNumber}"/>
					<ui:template>
						<Text text="{TreeTableModelView>LineNumber}" wrapping="false" />
					</ui:template>
				</ui:Column>
				<ui:Column width="8%">
					<Label text="{i18n>MaterialCode}"/>
					<ui:template>
						<ObjectIdentifier title="{TreeTableModelView>MaterialCode}" />
					</ui:template>
				</ui:Column>
				<ui:Column width="8%">
					<Label text="{i18n>Name}"/>
					<ui:template>
						<Text text="{TreeTableModelView>Name}" wrapping="false" />
					</ui:template>
				</ui:Column>
				<ui:Column width="12%">
					<Label text="{i18n>Description}"/>
					<ui:template>
			            <ExpandableText text="{TreeTableModelView>Description}" overflowMode="Popover" maxCharacters="32"/>
					</ui:template>
				</ui:Column>
				<ui:Column width="5%">
					<Label text="{i18n>InspectionQuantity(Accepted)}"/>
					<ui:template>
						<Text text="{TreeTableModelView>Qty}" wrapping="false" />
					</ui:template>
				</ui:Column>
				<ui:Column width="8%">
					<Label text="{i18n>QuantityreceivedforMDCCapproval}"/>
					<ui:template>						
						<Text text="{TreeTableModelView>MDCCApprovedQty}" />
					</ui:template>
				</ui:Column>
				<ui:Column width="5%">
					<Label text="{i18n>UOM}"/>
					<ui:template>
						<Text text="{TreeTableModelView>UOM}" wrapping="false" />
					</ui:template>
				</ui:Column>
			</ui:columns>
		</ui:TreeTable>
        <endButton>
        <Button text="{i18n>close}" type="Emphasized" press="onViewChildDialogClose"/> 
        </endButton>
	</Dialog>
</core:FragmentDefinition>