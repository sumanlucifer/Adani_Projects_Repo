<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="{i18n>PackingListName}" id="idPackingListNameGetter">
        <l:Grid defaultSpan="L12 M12 S12" width="auto" id="idGrid">
            <l:content>
                <f:SimpleForm  minWidth="1024" maxContainerCols="2" editable="false" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="2" columnsM="2">
                    <Label text="{i18n>EnterPackingListName}"/>
                    <Input value="{PackingListInputModel>/name}"/>
                </f:SimpleForm>
            </l:content>
        </l:Grid>
        <beginButton>
            <Button text="{i18n>create}" press="onCreatePress"/>
        </beginButton>
        <endButton>            
            <Button text="{i18n>close}" press="onCreateClose"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>