<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="helloDialog" title="Inspected Child Line Items">
        <content>
            <Table id="idInspectedChildLineItems" width="auto" growing="true" growingScrollToLoad="true" items="{inspectedMapBOQItemsModel>/inspectedMapBOQItems}" mode="None" rememberSelections="true">
                <columns>
                    <Column width="8%" hAlign="Center" visible="{inspectedMapBOQItemsModel>/isSpecial}">
                        <CheckBox select="onSelectAll"></CheckBox>
                    </Column>
                    <Column width="10%">
                        <Text text="Material Code"/>
                    </Column>
                    <Column width="10%">
                        <Text text="Description"/>
                    </Column>
                    <Column>
                        <Text text="Quantity"/>
                    </Column>
                    <Column>
                        <Text text="UOM"/>
                    </Column>
                    <Column>
                        <Text text="Remaining Quantity"/>
                    </Column>
                    <Column>
                        <Text text="Remaining Weight"/>
                    </Column>
                    <Column>
                        <Text text="Remarks"/>
                    </Column>
                    <Column>
                        <Text text="Approved Quantity"/>
                    </Column>                   
                    <Column>
                        <Text text="Weight Per Piece"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <CheckBox selected="{inspectedMapBOQItemsModel>isSelected}" select="onSelectionOfRow" visible="{inspectedMapBOQItemsModel>isSpecial}"/>
                            <ObjectIdentifier title="{inspectedMapBOQItemsModel>MaterialCode}" titleActive="true"/>
                            <Text text="{inspectedMapBOQItemsModel>Name}"/>
                            <Text text="{inspectedMapBOQItemsModel>Qty}"/>
                            <Text text="{inspectedMapBOQItemsModel>UOM}"/>
                            <Text text="{inspectedMapBOQItemsModel>RemainingQty}"/>
                            <Text text="{inspectedMapBOQItemsModel>RemainingWeight}"/>
                            <Text text="{inspectedMapBOQItemsModel>Remarks}"/>
                            <Input editable="{= ${inspectedMapBOQItemsModel>isSpecial} ? ${inspectedMapBOQItemsModel>isSelected} ? true : false : false }" type="Number" valueLiveUpdate="true" liveChange="onLiveChangeApprovedQty" value="{inspectedMapBOQItemsModel>ApprovedQty}"/>
                            <Text text="{inspectedMapBOQItemsModel>WeightPerPiece}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>

        <beginButton>
            <Button id="idBtnSave" text="Save" visible="{inspectedMapBOQItemsModel>/isSpecial}" press="onPressSaveInspectionBOQItems" type="Emphasized"></Button>
        </beginButton>
        <endButton>
            <Button text="Close" press="onViewInspectBOQDialogClose" type="Emphasized"></Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
