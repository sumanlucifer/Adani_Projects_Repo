<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="{i18n>PackingListName}">
        <l:Grid defaultSpan="L12 M12 S12" width="auto">
            <l:content>
                <f:SimpleForm minWidth="1024" maxContainerCols="2" editable="false" layout="ResponsiveGridLayout" 
                    labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="2" columnsM="2">
                    <Label text="{i18n>EnterReason}" required="true"/>
                    <Select id="idSelReason" forceSelection="false"  selectedKey="{qrAssistantModel>/reason}"
					    items="{
						    path: '/MasterQrCodeAssistanceReasonSet'						    
					    }">
					        <core:Item key="{Reason}" text="{Reason}" />
				    </Select>
                    <Label text="{i18n>comments}" required="true"/>
                    <TextArea value="{qrAssistantModel>/comment}"/>
                </f:SimpleForm>
            </l:content>
        </l:Grid>
        
        <beginButton>
            <Button text="{i18n>send}" press="onSendAssistanceRequestPress"/>
        </beginButton>
        <endButton>           
            <Button text="{i18n>cancel}" press="onCancelAssistanceRequestPress"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>