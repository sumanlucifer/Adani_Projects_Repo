<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog contentHeight="50%" contentWidth="50%" title="{i18n>PackingListChildLineItems}">
        <content>
            <Table id="idInspectedChildLineItems" width="auto" growing="true" growingScrollToLoad="true" 
            items="{path :'packinglist_child_items', parameters: {
                $expand : { 
                    'qr_code' : {
                               '$select' : ['content']
                    }
            }}}">
                <columns>
                    <Column>
                        <Text text="{i18n>MaterialCode}"/>
                    </Column>
                    <Column width="40%">
                        <Text text="{i18n>Description}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>quantity}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>UOM}"/>
                    </Column>
                    <!-- <Column>
                        <Text text="QR Code"/>
                    </Column> -->
                </columns>

                <items>
                    <ColumnListItem press=".onInspectionIDPress">
                        <cells>
                            <ObjectIdentifier title="{material_code}" titleActive="true"/>
                        </cells>
                        <cells>
                            <Text text="{description}"/>
                        </cells>
                        <cells>
                            <Text text="{qty}"/>
                        </cells>
                        <cells>
                            <Text text="{uom}"/>
                        </cells>
                         <!-- <cells>
                            <Avatar src= "data:image/jpg;base64,{qr_code/content}" displayShape="Square" displaySize="L" />
                        </cells> -->
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <endButton>
            <Button text="{i18n>close}" press="onViewPackingListChildDialogClose" type="Emphasized" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
