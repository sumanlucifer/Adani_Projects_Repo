<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog >
        <content>
            <Table width="auto" growing="true" id="idViewBOQItemTable" growingThreshold="10" 
                items="{path: 'BOQItems'}" fixedLayout="false" class="sapUiResponsiveMargin">
            <columns>
                <Column>
                    <Text text="{i18n>materialCode}" wrapping="true" wrappingType="Hyphenated"/>
                </Column>
                <Column>
                    <Text text="{i18n>name}" wrapping="true"/>
                </Column>
                <Column demandPopin="true" minScreenWidth="Desktop">
                    <Text text="{i18n>description}"/>
                </Column>
                <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                    <Text text="{i18n>quantity}" />
                </Column>
                <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                    <Text text="{i18n>orderUnit}"/>
                </Column>
                <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                    <Text text="{i18n>remarks}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <ObjectIdentifier title="{MaterialCode}"/>
                        <Text text="{Name}"/>
                        <ExpandableText text="{Description}" maxCharacters="50" overflowMode="Popover"/>
                        <Text text="{Qty}"/>
                        <Text text="{UOM}"/>
                        <ExpandableText text="{Remarks}" maxCharacters="50" overflowMode="Popover"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        </content>
        <endButton>
            <Button text="{i18n>close}" press="onViewBOQItemDialogClose" type="Emphasized" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>