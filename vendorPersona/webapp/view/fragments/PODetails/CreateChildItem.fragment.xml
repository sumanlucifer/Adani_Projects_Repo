<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified">
    <Dialog title="{i18n>AddChildItem}">
        <customHeader>
            <Bar>
                <contentMiddle>
                    <Title text="{i18n>AddChildItem}"/>
                </contentMiddle>
                <contentRight>
                    <core:Icon src="sap-icon://decline" width="1em" press=".closeDialog" class="sapUiTinyMarginEnd"/>
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" 
                labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="3" emptySpanL="3" 
                emptySpanM="3" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                <f:content>
                    <Label text="{i18n>MaterialCode}"/>
                    <Input value="{childItemCreationModel>/material_code}"/>
                    <Label text="{i18n>Description}"/>
                    <Input value="{childItemCreationModel>/description}"/>
                    <Label text="{i18n>quantity}"/>
                    <Input value="{childItemCreationModel>/qty}"/>
                    <Label text="{i18n>UOM}"/>
                    <Input value="{childItemCreationModel>/uom}"/>
                </f:content>
            </f:SimpleForm>
        </content>
        <endButton>
            <Button text="{i18n>SaveChildItem}" press=".onSaveChildLineItemPress" type="Emphasized"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>