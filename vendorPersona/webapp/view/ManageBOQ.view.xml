<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns="sap.m" controllerName="com.agel.mmts.vendorPersona.controller.ManageBOQ" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" busy="{objectViewModel>/busy}">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:breadcrumbs>
                    <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>manageBOQ}">
                        <Link text="{i18n>assignedPOList}" press=".handleToAllPOBreadcrumPress"/>
                        <Link text="{i18n>confirmedPODetails}" press=".handleToAllPOBreadcrumPress"/>
                    </Breadcrumbs>
                </uxap:breadcrumbs>
                <uxap:expandedHeading>
                    <Title text="{Name}" wrapping="true" titleStyle="H3" />
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <Title text="{Name}" wrapping="true" titleStyle="H3"/>
                </uxap:snappedHeading>
                <uxap:expandedContent></uxap:expandedContent>
                <uxap:snappedTitleOnMobile>
                    <Title text="{Name}" wrapping="true" titleStyle="Auto"/>
                </uxap:snappedTitleOnMobile>
                <uxap:actions>
                    <Button text="{i18n>save}" icon="sap-icon://save" iconFirst="true" press="onSaveManagedBOQItemsPress"/>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
            <FlexBox direction="Row" renderType="Bare" class="sapUiTinyMarginBottom">
                <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                    <Label text="{i18n>poNumber}" class="sapUiTinyMarginBottom"/>
                    <Text text="{PONumber}"/>
                </VBox>
                <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                    <Label text="{i18n>quantity}" class="sapUiTinyMarginBottom"/>
                    <Text text="{Quantity}"/>
                </VBox>
                <VBox renderType="Bare">
                    <Label text="{i18n>uom}" class="sapUiTinyMarginBottom"/>
                    <Text text="{UoM}"/>
                </VBox>
            </FlexBox>
        </uxap:headerContent>
        <uxap:sections>

         <uxap:ObjectPageSection>
                <uxap:subSections>
                    <uxap:ObjectPageSubSection >
                       
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection>
                <uxap:subSections>
                    <uxap:ObjectPageSubSection >
                        <VBox renderType="Bare">
                            <MessageStrip text="{i18n>BOQitemsfor1quantityof} {Name}." type="Information" showIcon="true" 
                                class="sapUiMediumMarginBottom" visible="{= ${objectViewModel>/noParentChildRelationFlag} ? false : true }" />
                            <FlexBox justifyContent="End">
                                <CheckBox text="{i18n>NoParentChildrelationapplicable}" selected="{objectViewModel>/noParentChildRelationFlag}" />
                            </FlexBox>

                            <Table id="idManageBOQTable" growing="true" growingThreshold="10" items="{ManageBOQModel>/boqItems}" 
                                visible="{= ${objectViewModel>/noParentChildRelationFlag} ? false : true }">
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <Button text="{i18n>AddRow}" icon="sap-icon://add" press="onAddItemPress"></Button>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column>
                                        <Text text="{i18n>ChildName}"/>
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>materialCode}"/>
                                    </Column>
                                    <Column demandPopin="true" minScreenWidth="Tablet">
                                        <Text text="{i18n>quantity}"/>
                                    </Column>
                                    <Column demandPopin="true" minScreenWidth="Desktop">
                                        <Text text="{i18n>Remarks}"/>
                                    </Column>
                                    <Column demandPopin="true" minScreenWidth="Tablet">
                                        <Text text="{i18n>UOM}"/>
                                    </Column>
                                    <Column width="5%">
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem id="idBOQItems">
                                        <cells>
                                            <Select forceSelection="false" selectedKey="{ManageBOQModel>Name}" 
                                                items="{
                                                    path: '/MasterBoQItemSet',
                                                    templateShareable:false,
                                                    sorter: { path: 'Name' }
                                                }" change="onBOQItemSelected">
                                                <core:Item key="{Name}" text="{Name}" />
                                            </Select>
                                            <Text data:p="MaterialCode" text="{ManageBOQModel>MaterialCode}"/>
                                            <Input value="{ManageBOQModel>Qty}"/>
                                            <VBox>
                                                <Link text="{i18n>AddRemarks}" press="openAddRemarksPopupPress" visible="{= ${ManageBOQModel>Remarks}.length ? false : true}"/>
                                                <ExpandableText text="{ManageBOQModel>Remarks}" overflowMode="Popover" visible="{= ${ManageBOQModel>Remarks}.length ? true : false}"/>
                                            </VBox>
                                            <Select id="idUOMSelector" forceSelection="false" visible="{= ${ManageBOQModel>Name}.length >0 ? true : false }" 
                                                selectedKey="{ManageBOQModel>UOM}" 
                                                items="{
                                                    path: 'ManageBOQModel>UOMSuggestions',
                                                        templateShareable:false
                                                }">
                                                <core:Item key="{ManageBOQModel>UOM}" text="{ManageBOQModel>UOM}" />
                                            </Select>
                                            <Button icon="sap-icon://delete" press="onDeleteBOQItemPress" type="Transparent"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>