<mvc:View xmlns:f2="sap.f"
    xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m" controllerName="com.agel.mmts.storeinchargereturnmaterial.controller.ConfirmPage" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" preserveHeaderStateOnScroll="true" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" showFooter="true">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <!-- <uxap:breadcrumbs>
                    <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>ReturnMaterialDetails}">
                        <Link text="{i18n>ReturnMaterial}" press=".handleToAllReturnMaterialBreadcrumPress"/>
                    </Breadcrumbs> 
                </uxap:breadcrumbs> -->
                <uxap:expandedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>Summary}" wrapping="false" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                    </FlexBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>Summary}" wrapping="true" titleStyle="H4"/>
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedContent></uxap:expandedContent>
                <uxap:snappedTitleOnMobile>
                </uxap:snappedTitleOnMobile>
                <uxap:actions>
                    <Button text="Confirm" press="onReturnConfirm" type="Emphasized" />
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
        </uxap:headerContent>
        <uxap:sections>

            <!-- Summary Table Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>lineItems}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>lineItems}">
                        <tt:TreeTable id="TreeTable" rows="{path:'TreeTableModelView>/ReturnData', parameters: {arrayNames:['ChildItemsView']}}" 
                            selectionMode="None" enableSelectAll="false" ariaLabelledBy="title" rowsUpdated="onRowsUpdated">
                            <tt:columns>
                                <tt:Column>
                                    <Label text="ID" />
                                    <tt:template>
                                        <Text text="{TreeTableModelView>ID}" />
                                    </tt:template>
                                </tt:Column>
                                <tt:Column>
                                    <Label text="Material Code" wrapping="true"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>MaterialCode}" />
                                    </tt:template>
                                </tt:Column>
                                <tt:Column>
                                    <Label text="Plant"/>
                                    <tt:template>
                                        <ObjectIdentifier title="{TreeTableModelView>Plant}" />
                                    </tt:template>
                                </tt:Column>
                                <tt:Column>
                                    <Label text="Name"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>Name}" wrapping="false" />
                                    </tt:template>
                                </tt:Column>     
                                <tt:Column>
                                    <Label text="Issued Quantity"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>Quantity}" wrapping="false" />
                                    </tt:template>
                                </tt:Column>
                                <tt:Column>
                                    <Label text="Qty Requested for Return"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>RequirementQuantity}" wrapping="false" />
                                    </tt:template>
                                </tt:Column>                  
                                <tt:Column>
                                    <Label text="Qty Approved for Return"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>ApprovedQuantity}" wrapping="false"/>
                                    </tt:template>
                                </tt:Column>
                            </tt:columns>
                        </tt:TreeTable>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>

</mvc:View>