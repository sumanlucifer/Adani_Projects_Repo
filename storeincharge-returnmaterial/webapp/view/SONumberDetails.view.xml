<mvc:View xmlns:f2="sap.f"
    xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m" controllerName="com.agel.mmts.storeinchargereturnmaterial.controller.SONumberDetails" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" preserveHeaderStateOnScroll="true" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" showFooter="true">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                    <uxap:breadcrumbs>
                    <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>ReturnMaterialDetails}">
                        <Link text="{i18n>ReturnMaterial}" press=".handleToAllReturnMaterialBreadcrumPress"/>
                    </Breadcrumbs> 
                </uxap:breadcrumbs>   
                <uxap:expandedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>ReturnMaterial}" wrapping="false" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{ReservationNumber}" wrapping="true" titleStyle="H3" />
                    </FlexBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>ReturnMaterial}" wrapping="true" titleStyle="H4"/>
                        <!-- <Title text="{SONumber}" binding="{SONumberId}" wrapping="true" titleStyle="H3"/> -->
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedContent></uxap:expandedContent>
                <uxap:snappedTitleOnMobile>
                    <!-- <Title text="{SONumber}" binding="{SONumberId}" wrapping="true" titleStyle="Auto"/> -->
                </uxap:snappedTitleOnMobile>
                <uxap:actions>
                    <Button text="Done" press="onDonePress" type="Emphasized" enabled="{= ${objectViewModel>/enableDone} || ${Status} === 'Approved' || ${Status} === 'Rejected' || ${Status} === 'Partially Approved' }"/>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
          <uxap:headerContent>
            <FlexBox wrap="Wrap" height="100%" renderType="Bare" direction="Column">
                <VBox renderType="Bare">
                    <FlexBox direction="Row" renderType="Bare" class="sapUiTinyMarginBottom">
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>Plant}" />
                            <!-- missing -->
                            <Text text="{Plant}"/>
                        </VBox>
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>goodsRecipient}" />
                            <!-- missing -->
                            <Text text="{GoodsRecipient}"/>
                        </VBox>
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>ReservationDate}" />
                            <!-- missing -->
                            <Text text="{path:'ReservationDate',
                                type: 'sap.ui.model.type.DateTime',
                                formatOptions: {
                                pattern: 'MMMM dd, yyyy HH:mm:ss'
                                }
                            }"/>
                        </VBox>
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>status}" />
                            <!-- missing -->
                            <ObjectStatus id="idStatus" text="{Status}" state="{= ${Status} === 'PARTIALLY CONSUMED' ? 'Warning' : ${Status} === 'RESERVED FOR CONSUMPTION' ? 'Information' :  ${Status} === 'RESERVED FOR RETURN MATERIAL' ? 'Success' : 'Error'}" visible="{= ${Status}.length>0 ? true : false }"/>
                        </VBox>
                    </FlexBox>
                </VBox>
                <!-- <VBox renderType="Bare">
                    <Label text="{i18n>instruction}" design="Bold"/>
                    <ObjectAttribute text="Please raise the inspection call through SIMS portal." />
                </VBox> -->
            </FlexBox>
        </uxap:headerContent>
        <uxap:sections>

        <!-- Basic Details Section -->
            <!-- <uxap:ObjectPageSection titleUppercase="false" title="{i18n>basicDetails}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>basicDetails}" class="BasicDetalFormTitleStyle">
                        <f:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2" binding="{SONumberId/Contractor}" singleContainerFullSize="true" class="style-RemoveTitleHeight">
                            <f:content>
                                <Label text="{i18n>ContractorName}" />
                                <Text text="{Name}" />

                                <Label text="{i18n>ContractorId}" />
                                <Text text="{ID}" />

                                <Label text="{i18n>PlantSite-Location}" />
                                <Text text="{PlantSiteLocation}"/>

                                <Label text="{i18n>ActivePeriod}" />
                                <Text text="{ActivePeriod}"/>

                                <Label text="{i18n>Materials}" />
                                <Text text="{Materials}"/>
                                
                                <Label text="{i18n>Description}" />
                                <Text text="{Description}"/>

                                <Label text="{i18n>Service-Covered}" />
                                <Text text="{ServicesCovered}"/>
                                
                                <Label text="{i18n>IssuedMaterials}" />
                                <Link text="{i18n>viewLineItems}" press="onViewLineItemPress"/>

                            </f:content>
                        </f:SimpleForm>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection> -->

            <!-- Line Items Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>lineItems}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>lineItems}">
                        <tt:TreeTable id="TreeTable" rows="{path:'TreeTableModelView>/ReturnData', parameters: {numberOfExpandedLevels: 2, arrayNames:['ChildItemsView']}}" 
                            selectionMode="None" enableSelectAll="false" ariaLabelledBy="title" rowsUpdated="onRowsUpdated">
                            <tt:extension>
                                <OverflowToolbar style="Clear">
                                    <Title id="title" text="{i18n>TreeTableViewTitle}"/>
                                    <ToolbarSpacer/>
                                    <Button text="Approve All" press="onApproveAllPress" type="Accept" icon="sap-icon://accept" enabled="{= ${Status} !== 'RESERVED FOR RETURN MATERIAL'? false : !${objectViewModel>/partialApproval}}"/>
                                    <Button text="{i18n>PartialApprove}" press="onPartialApprovePress" enabled="{= ${Status} !== 'RESERVED FOR RETURN MATERIAL'? false : ${objectViewModel>/partialApproval}}"/>
                                    <Button text="Reject All" press="onRejectAllPress" type="Reject" icon="sap-icon://decline" enabled="{= ${Status} !== 'RESERVED FOR RETURN MATERIAL'? false : !${objectViewModel>/partialApproval}}"/>
                                </OverflowToolbar>
                            </tt:extension>
                            <tt:columns>
                                <tt:Column>
                                    <Label text="" />
                                    <tt:template>
                                        <CheckBox select="onReturnItemSelect" selected="{TreeTableModelView>isSelected}" visible="{=  ${Status} === 'RESERVED FOR RETURN MATERIAL' &amp;&amp; ${TreeTableModelView>selectable}}" />
                                        <!-- <CheckBox select="onReturnItemSelect" selected="{TreeTableModelView>isSelected}" visible="{=  ${Status} === 'RESERVED FOR RETURN MATERIAL' &amp;&amp; ${TreeTableModelView>selectable} &amp;&amp; ${TreeTableModelView>RequirementQuantity} > 0 }" /> -->
                                    </tt:template>
                                </tt:Column>
                                <tt:Column>
                                    <Label text="Material Code" wrapping="true"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>MaterialCode}" />
                                    </tt:template>
                                </tt:Column>
                                <tt:Column>
                                    <Label text="Material Name" wrapping="true"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>Name}" wrapping="false" /> 
                                    </tt:template>
                                </tt:Column>
                                 <tt:Column>
                                    <Label text="Material Description" wrapping="true"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>Description}" wrapping="false" /> 
                                    </tt:template>
                                </tt:Column>
                                <tt:Column>
                                    <Label text="Plant Code" wrapping="true"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>Plant}" />
                                    </tt:template>
                                </tt:Column>   
                                <tt:Column>
                                    <Label text="{i18n>WBS}" wrapping="true"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>WBSElement}" />
                                    </tt:template>
                                </tt:Column> 
                                <tt:Column>
                                    <Label text="Base Quantity" wrapping="true"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>BaseQty}" wrapping="false" />
                                    </tt:template>
                                </tt:Column>   
                                <tt:Column>
                                    <Label text="Base Unit" wrapping="true"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>BaseUnit}" />
                                    </tt:template>
                                </tt:Column> 
                                <tt:Column>
                                    <Label text="Weight Per Piece" wrapping="true"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>WeightPerPiece}" wrapping="false" />
                                    </tt:template>
                                </tt:Column>                              
                                <tt:Column>
                                    <Label text="Issued Quantity" wrapping="true"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>Quantity}" wrapping="false" />
                                    </tt:template>
                                </tt:Column>
                                <tt:Column>
                                    <Label text="Balanced Quantity" wrapping="true"/>   
                                    <tt:template>
                                        <Text text="{TreeTableModelView>BalanceQty}" wrapping="false" />
                                    </tt:template>
                                </tt:Column>
                                <tt:Column>
                                    <Label text="Quantity Requested for Return" wrapping="true"/>
                                    <tt:template>
                                        <ObjectIdentifier title="{TreeTableModelView>RequirementQuantity}" />
                                    </tt:template>
                                </tt:Column>                  
                                <tt:Column>
                                    <Label text="Quantity Approved for Return" wrapping="true"/>
                                    <tt:template>
                                        <Input type="Number" value="{TreeTableModelView>ApprovedRetQuantity}" enabled="{TreeTableModelView>isSelected}"  valueLiveUpdate="false" liveChange="onLiveChangeApprvdQty" 
                                            valueState="{= ${TreeTableModelView>ApprovedRetQuantity} > 0 &amp;&amp; ${TreeTableModelView>RequirementQuantity} >= ${TreeTableModelView>ApprovedRetQuantity} ? 'None' : 'Error' }"/>
                                    </tt:template>
                                </tt:Column>   

                                 <tt:Column>
                                    <Label text="Status"/>
                                    <tt:template>
                                <ObjectStatus text="{TreeTableModelView>Status}" state="{= ${TreeTableModelView>Status} === 'RESERVED' ? 'Success' : ${Status} === 'RESERVED FOR ISSUE' ? 'Information' : 'Error'}" visible="{= ${Status}.length>0 ? true : false }"/>
                                    </tt:template>
                                </tt:Column>                                
                                
                            </tt:columns>
                        </tt:TreeTable>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>

</mvc:View>
