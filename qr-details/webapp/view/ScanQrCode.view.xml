<mvc:View xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns:scan="sap.ndc"
    xmlns="sap.m" controllerName="com.agel.mmts.qrdetails.controller.ScanQrCode" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" showFooter="true">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:content>
                    <!-- <HBox alignItems="Center">
                        <Text text="Domestic Entry"/>
                    </HBox> -->
                    <HBox alignItems="Center">
                        <Input id="idInputQRCode" width="20rem" placeholder="Enter QR Number" liveChange="onQRCodeSuggestionSelected" class="sapUiSmallMarginEnd" enabled="{oViewModel>/inputQRCode}"/>
                        <Button id="idQRBtn" text="Submit" type="Emphasized" press="onPressSubmitQRCode" class="sapUiSmallMarginBegin" enabled="{oViewModel>/submitQRCode}"/>
                    </HBox>
                    <HBox alignItems="Center">
                        <Text text="OR" class="sapUiTinyMargin"/>
                    </HBox>
                    <HBox alignItems="Center">
                        <scan:BarcodeScannerButton id="idQRSubmit" scanSuccess="onScanSuccess" scanFail="onScanError"/>
                    </HBox>
                </uxap:content>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
        </uxap:headerContent>
        <uxap:sections>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>