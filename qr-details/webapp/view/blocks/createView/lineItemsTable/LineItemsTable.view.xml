<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:tt="sap.ui.table" controllerName="com.agel.mmts.qrdetails.view.blocks.createView.lineItemsTable.LineItemsTableController">

    <Table id="idBOQItemTable" items="{path: 'PackingListParentItems'}" autoPopinMode="true" growingThreshold="5" growing="true" fixedLayout="false">
        <columns>
            <Column>
                <Text text="{i18n>LineNumber}"/>
            </Column>
            <Column>
                <Text text="{i18n>MaterialCode}"/>
            </Column>
            <Column>
                <Text text="{i18n>Name}"/>
            </Column>
            <Column>
                <Text text="{i18n>Description}"/>
            </Column>

            <Column>
                <Text text="{i18n>TotalQuantity}"/>
            </Column>
            <Column>
                <Text text="{i18n>DispatchQuantity}"/>
            </Column>
            <Column>
                <Text text="{i18n>UOM}"/>
            </Column>
            <Column>
                <Text text="{i18n>Action}"/>
            </Column>
            <!-- <Column>
                <Text text="Name"/>
            </Column> -->
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{LineNumber}"/>
                    <ObjectIdentifier title="{MaterialCode}"/>
                    <Text text="{Name}"/>
                    <ExpandableText text="{Description}" overflowMode="Popover" maxCharacters="50" />
                    <Text text="{Qty}"/>
                    <Text text="{DispatchQty}"/>
                    <Text text="{UOM}"/>
                    <VBox items="{PackingListBOQItems}">
                        <Link text="{i18n>ViewBOQitems}" press="onViewBOQItemsPress" visible="{= ${PackingListBOQItems/items}.length>0 }"/>
                    </VBox>
                </cells>
            </ColumnListItem>
        </items>
    </Table>

</mvc:View>


