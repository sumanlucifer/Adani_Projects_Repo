<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar">

    <fb:FilterBar id="filterbar" reset="onResetFilters" search="onSearch" useToolbar="false" showGoOnFB="true"
    showRestoreOnFB="true">
        <fb:filterGroupItems>
          <fb:FilterGroupItem groupName="__$INTERNAL$" name="UserId" label="{i18n>UserId}" visibleInFilterBar="true" class="searchFieldLabelHidden" >
                <fb:control>
                    <Input id="idUserId" liveChange="onFilterChange" placeholder="{i18n>EnterUserId}" showSuggestion="true" showValueHelp="false" suggestionItems="{/RoleAssignApprovalRequestSet}">
                        <suggestionItems>
                            <core:Item text="{UserId}"/>
                        </suggestionItems>
                    </Input>
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Role" label="{i18n>role}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                <fb:control>
                    <Input id="idRole" liveChange="onFilterChange" placeholder="{i18n>EnterRole}" showValueHelp="false" suggestionItems="{/RoleAssignApprovalRequestSet}" showSuggestion="true">
                        <suggestionItems>
                            <core:Item text="{Role}"/>
                        </suggestionItems>
                    </Input>
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Email" label="{i18n>email}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                <fb:control>
                    <Input id="idEmail" liveChange="onFilterChange" placeholder="{i18n>EntrEmail}" showValueHelp="false" suggestionItems="{/RoleAssignApprovalRequestSet}" showSuggestion="true">
                        <suggestionItems>
                            <core:Item text="{Email}"/>
                        </suggestionItems>
                    </Input>
                </fb:control>
            </fb:FilterGroupItem>
              <fb:FilterGroupItem groupName="__$INTERNAL$" name="RequestNumber" label="{i18n>requestnumber}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                <fb:control>
                    <Input id="idRequestNumber" liveChange="onFilterChange" placeholder="{i18n>EntrRequestNumber}" showValueHelp="false" suggestionItems="{/RoleAssignApprovalRequestSet}" showSuggestion="true">
                        <suggestionItems>
                            <core:Item text="{RequestNumber}"/>
                        </suggestionItems>
                    </Input>
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem groupName="__$INTERNAL$" name="createdAt" label="{i18n>createdAt}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                <fb:control>
                    <DateRangeSelection id="dateRangeSelectionId" displayFormat="dd/MM/yyyy" change="onDateRangeSelectionChange"/>
                </fb:control>
            </fb:FilterGroupItem>
        </fb:filterGroupItems>
    </fb:FilterBar>
</core:FragmentDefinition>