<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m" xmlns:u="sap.ui.unified"
    xmlns:smartTable="sap.ui.comp.smarttable"
    controllerName="com.agel.mmts.storeinchargeraisedpo.view.blocks.PODetails.packingItemsForm.PackingItemsFormController">

  <Table width="auto" growing="true" growingThreshold="10" fixedLayout="false" items="{PackingList}">
        <columns>
            <Column demandPopin="true" minScreenWidth="Desktop" hAlign="Center">
                <Text text="Name" wrapping="true" wrappingType="Hyphenated"/>
            </Column>
                 <Column demandPopin="true" minScreenWidth="Desktop" hAlign="Center">
                <Text text="Invoice Date" wrapping="true" wrappingType="Hyphenated"/>
            </Column>
                 <Column demandPopin="true" minScreenWidth="Desktop" hAlign="Center">
                <Text text="Status" wrapping="true" wrappingType="Hyphenated"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Desktop" hAlign="Center">
                <Text text="Gate Entry Number" wrapping="true" wrappingType="Hyphenated"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Desktop" hAlign="Center">
                <Text text="Unloading Date" wrapping="true" wrappingType="Hyphenated"/>
            </Column>
        </columns>
        <items>
           <ColumnListItem type="Navigation" press="onpressPackingListDetails">
                <cells>
                    <Text text="{Name}"/>
                    <Text text="{path:'InvoiceDate',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }
                        }"/>
 
                    <ObjectStatus text="{Status}" state="{= ${Status}=== 'SAVED' ? 'Indication05' : ${Status}=== 'DISPATCHED' ? 'Indication06' : 'Indication08'}"/>

                    <Text text="{GateEntryNumber}"/>
                    <Text text="{path:'UnloadingDate',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                pattern: 'MMMM dd, yyyy'
                                }
                        }"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>

</mvc:View>
