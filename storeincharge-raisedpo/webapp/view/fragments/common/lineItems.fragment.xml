<core:FragmentDefinition xmlns="sap.m" 	xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified">
   
    <Table width="auto" growing="true" growingThreshold="5" items="{path: 'ParentLineItems'}" fixedLayout="false">
        <columns>
            <!-- <Column demandPopin="true" minScreenWidth="Desktop" hAlign="Center">
                <Text text="{i18n>ponumber}" wrapping="true" wrappingType="Hyphenated"/>
            </Column> -->
            <Column demandPopin="true" minScreenWidth="Desktop" hAlign="Center">
                <Text text="{i18n>LineNumber}" wrapping="true" wrappingType="Hyphenated"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Desktop">
                <Text text="{i18n>materialCode}" wrapping="true" wrappingType="Hyphenated"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Desktop">
                <Text text="{i18n>Name}" wrapping="true"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Desktop">
                <Text text="{i18n>hsncode}"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Desktop">
                <Text text="{i18n>plant}" />
            </Column>
            <Column demandPopin="true" minScreenWidth="Desktop" hAlign="Center">
                <Text text="{i18n>storageloc}" />
            </Column>
            <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                <Text text="{i18n>quantity}" />
            </Column>
            <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                <Text text="{i18n>UOM}"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                <Text text="{i18n>netPrice}"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Desktop" hAlign="Center">
                <Text text="{i18n>netValue}"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Desktop" hAlign="Center">
                <Text text="{i18n>taxCode}"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Desktop" hAlign="Center">
                <Text text="{i18n>taxIndicator}"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Desktop">
                <Text text="{i18n>deliveryDate}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <!-- <Text text="{ponumber}"/> -->
                    <Text text="{LineNumber}" wrappingType="Hyphenated"/>
                    <ObjectIdentifier title="{MaterialCode}"/>
                    <!-- <VBox>
		                <tnt:InfoLabel id="il2" text="Partial" renderMode="Narrow" colorScheme="2" visible="{= ${IsPartial} === true ? true  : false }"/>
                        <ObjectIdentifier title="{MaterialCode}"/>
                    </VBox>     -->
                    <Text text="{Name}" wrappingType="Hyphenated"/>
                    <Text text="{HSNCode}"/>
                    <Text text="{PlantCode}" binding="{PurchaseOrder}"/>
                    <Text text="{StorageLocation}"/>
                    <Text text="{Quantity}"/>
                    <Text text="{UoM}"/>
                    <u:Currency stringValue="{Price}" currency="{PurchaseOrder/Currency}" useSymbol="true"/>
                    <u:Currency stringValue="{Value}" currency="{PurchaseOrder/Currency}" useSymbol="true"/>
                    <Text text="{TaxCode}"/>
                    <Text text="{TaxIndicator}"/>
                    <Text text="{path:'DeliveryDate',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }
                        }"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    

</core:FragmentDefinition>