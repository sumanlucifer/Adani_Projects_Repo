<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.ui.layout.form">
    <Dialog class="testTitle">
        <content>
            <FlexBox wrap="Wrap" renderType="Bare" class="sapUiSmallMargin">
                <f:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2" singleContainerFullSize="true" class="style-RemoveTitleHeight">
                    <f:content>
                        <Label text="{i18n>PONo}"/>
                        <Text text="{PONumber}" binding="{PurchaseOrder}"/>
                        <Label text="{i18n>PODate}"/>
                        <Text text="{path:'POReleaseDate',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }}" binding="{PurchaseOrder}"/>
                        <Label text="{i18n>GatePassNumber}" />
                        <Text text="{GateEntryNumber}"/>
                        <Label text="{i18n>TotalWeight}"/>
                        <Text text="{TotalWeight}"/>
 
                    <!-- <Label text="{i18n>StorageLocation}"/>
                        <Text text="{StorageLocation}" binding="{PackingListParentItems}"/>
                        <Label text="{i18n>BatchNumber}"/>
                        <Text text="{BatchNumber}" binding="{PackingListParentItems}"/> -->

                    </f:content>
                </f:SimpleForm>
                <f:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2" singleContainerFullSize="true" class="style-RemoveTitleHeight">
                    <f:content>
                        <Label text="Movement Type " required="true"></Label>
                        <Input id="idMovementType" value="{requestModel>/MovementType}" editable="false"></Input>
                        <Label text="Total Packaging Weight" required="true"></Label>
                        <Input id="idweight" value="{requestModel>/quantity}" liveChange="onQuantityLiveChange" type="Number" valueState="{requestModel>/valueState}" valueStateText="{requestModel>/valueStateText}"></Input>
                        <Label text="Bill of Lading" required="true"></Label>
                        <Input id="idbilloflading" value="{requestModel>/billoflading}" type="Text" valueState="{requestModel>/valueState}" valueStateText="{requestModel>/valueStateText}"></Input>
                        <Label text="LR Number" required="true"></Label>
                        <Input id="idlrnumber" value="{requestModel>/lrnumber}" type="Text" valueState="{requestModel>/valueState}" valueStateText="{requestModel>/valueStateText}"></Input>
                        <Label text="Reference" required="true"></Label>
                        <Input id="idreference" value="{requestModel>/reference}" type="Text" valueState="{requestModel>/valueState}" valueStateText="{requestModel>/valueStateText}"></Input>
                        <Label text="Delivery Note​​​​​​​​​" required="true"></Label>
                        <Input id="iddelivery" value="{requestModel>/delivery}" type="Text" valueState="{requestModel>/valueState}" valueStateText="{requestModel>/valueStateText}"></Input>
                    </f:content>
                </f:SimpleForm>

                <Table width="auto"  growing="true" growingThreshold="5" items= "{RestrictedStoreStockParents}" fixedLayout="false">
                    <columns>
                        <Column importance="High">
                            <Text text="{i18n>lineNo}" wrapping="true" wrappingType="Hyphenated" />
                        </Column>
                        <Column importance="High">
                            <Text text="{i18n>materialCode}" wrapping="true" wrappingType="Hyphenated"/>
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center" >
                            <Text text="Name"/>
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="Description"/>
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center" >
                            <Text text="Movement Type"/>
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="{i18n>Plant}" />
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center" >
                            <Text text="{i18n>quantity}" />
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center" >
                            <Text text="{i18n>UOM}"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{LineNumber}"/>
                                <ObjectIdentifier title="{MaterialCode}"/>
                                <Text text="{Name}"/>
                                <Text text="{Description}"/>
                                <Text text="{MovementType}"/>
                                <Text text="{PlantCode}"/>
                                <Text text="{Qty}"/>
                                <Text text="{UOM}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>

            </FlexBox>
        </content>
        <beginButton>
            <Button id="idRequestButton" text="Request" press="onRequestPress" type="Emphasized" enabled="{requestModel>/isConfirmButtonEnabled}"></Button>
        </beginButton>
        <endButton>
            <Button text="Close" press="onViewChildDialogClose" type="Emphasized" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>