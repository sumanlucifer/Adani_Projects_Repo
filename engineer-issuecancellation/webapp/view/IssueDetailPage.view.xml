<mvc:View xmlns:f2="sap.f"
    xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m" controllerName="com.agel.mmts.engineerissuecancellation.controller.IssueDetailPage" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" busy="{objectViewModel>/busy}">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:breadcrumbs>
                    <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>issueReservationDetail}">
                        <Link text="{i18n>issueReservations}" press=".handleToAllPOBreadcrumPress"/>
                    </Breadcrumbs>
                </uxap:breadcrumbs>
                <uxap:expandedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>issueReservationDetail}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{MaterialDocumentNumber}" wrapping="true" titleStyle="H3" />
                    </FlexBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>issueReservationDetail}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{MaterialDocumentNumber}" wrapping="true" titleStyle="H3"/>
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedContent></uxap:expandedContent>


                <uxap:snappedTitleOnMobile>
                    <Title text="{i18n>SONumber}- {MaterialDocumentNumber}" wrapping="true" titleStyle="Auto"/>
                </uxap:snappedTitleOnMobile>
                <uxap:actions>
                    <Button text="{i18n>CancelIssuedItems>" press="onPressCancelIssuePosting" type="Emphasized" visible="{= ${Status} === 'ISSUED' || ${Status} === 'PARTIALLY ISSUED' || ${Status} === 'PARTIALLY CANCELLED'}" enabled="{objectViewModel>/cancelbutton}"/>

                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
            <FlexBox wrap="Wrap" height="100%" renderType="Bare" direction="Column">
                <VBox renderType="Bare">
                    <FlexBox direction="Row" renderType="Bare" class="sapUiTinyMarginBottom">
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>CreatedAt}" />
                            <Text text="{path:'CreatedAt',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }
                            }"/>
                        </VBox>
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>DocumentDate}" />
                            <Text text="{path:'DocumentDate',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }
                            }"/>
                        </VBox>
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>PostingDate}" />
                            <Text text="{path:'PostingDate',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }
                            }"/>
                        </VBox>
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>status}" />
                            <!-- missing -->
                            <ObjectStatus text="{Status}" state="{= ${Status} === 'ISSUED' ? 'Success' : ${Status} === 'PARTIALLY CANCELLED' ? 'Information' : ${Status} === 'PARTIALLY EXECUTED' ? 'Warning' : 'Error'}" visible="{= ${Status}.length>0 ? true : false }"/>
                        </VBox>
                        <!-- visible="{= ${Status}.length>0 ? true : false }" -->
                    </FlexBox>
                </VBox>
                <!-- <VBox renderType="Bare">
                    <Label text="{i18n>instruction}" design="Bold"/>
                    <ObjectAttribute text="Please raise the inspection call through SIMS portal." />
                </VBox> -->
            </FlexBox>
        </uxap:headerContent>
        <uxap:sections>
            <!-- Line Items Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>lineItems}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>lineItems}">
                        <Table id="idListTable" growing="true" growingThreshold="10" items="{consumptionData>/}">
                            <headerToolbar>
                                <OverflowToolbar>
                                    <content>
                                    </content>
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column width="5%">
                                    <CheckBox select="onSelectAll"></CheckBox>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="{i18n>MaterialName}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="{i18n>MaterialCode}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="{i18n>PlantCode}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="{i18n>StorageLocation}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="{i18n>MovementType}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="{i18n>GoodsRecipient}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="{i18n>WBSElement}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="{i18n>UnloadingPoint}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="{i18n>IssuedQuantity}"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Desktop">
                                    <Text text="{i18n>ReservedQuantity"/>
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                    <Text text="{i18n>Status"/>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem id="idBOQItems">
                                    <cells>
                                        <CheckBox visible="{= ${consumptionData>Status} === 'ISSUED' ? true : ${consumptionData>Status} === 'RESERVED' ? true : false }" selected="{consumptionData>isSelected}" select="onSelectionOfRow" />
                                        <Text text="{consumptionData>Name}"/>
                                        <Text text="{consumptionData>MaterialCode}"/>
                                        <Text text="{consumptionData>Plant}"/>
                                        <Text text="{consumptionData>StorageLocation}"/>
                                        <Text text="{consumptionData>MovementType}" />
                                        <Text text="{consumptionData>IssuedMaterialReservedItem/IssueMaterialReserve/GoodsRecipient}"/>
                                        <Text text="{consumptionData>IssuedMaterialReservedItem/IssueMaterialReserve/WBSNumber}"/>
                                        <Text text="{consumptionData>UnloadPoint}"/>
                                        <Text text="{consumptionData>IssuedQty}"/>
                                        <Text text="{consumptionData>IssuedMaterialReservedItem/ReservedQty}"/>
                                        <ObjectStatus text="{consumptionData>Status}" state="{= ${consumptionData>Status} === 'ISSUED' ? 'Success' : ${consumptionData>Status} === 'RESERVED' ? 'Information' : 'Error'}" visible="{= ${consumptionData>Status}.length>0 ? true : false }"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>