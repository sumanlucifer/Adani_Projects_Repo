<mvc:View xmlns:f2="sap.f"
    xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m" controllerName="com.agel.mmts.engineerissuecancellation.controller.IssueDetailPage" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" busy="{objectViewModel>/busy}">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:breadcrumbs>
                    <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>issueReservationDetail}">
                        <Link text="{i18n>issueReservations}" press=".handleToAllPOBreadcrumPress"/>
                    </Breadcrumbs>
                </uxap:breadcrumbs>
                <uxap:expandedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>issueReservationDetail}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{MaterialDocumentNumber}" wrapping="true" titleStyle="H3" />
                    </FlexBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>issueReservationDetail}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{MaterialDocumentNumber}" wrapping="true" titleStyle="H3"/>
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedContent></uxap:expandedContent>


                <uxap:snappedTitleOnMobile>
                    <Title text="{i18n>SONumber}- {MaterialDocumentNumber}" wrapping="true" titleStyle="Auto"/>
                </uxap:snappedTitleOnMobile>
                <uxap:actions>


                    <Button text="Cancel issue posting" visible="{= ${Status} === 'Issued'}" press="onPressCancelIssuePosting" type="Emphasized"/>

                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>

            <FlexBox wrap="Wrap" height="100%" renderType="Bare" direction="Column">
                <VBox renderType="Bare">
                    <FlexBox direction="Row" renderType="Bare" class="sapUiTinyMarginBottom">

                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>CreatedAt}" />
                            <!-- missing -->
                            <Text text="{path:'CreatedAt',
                                  type: 'sap.ui.model.type.DateTime',
formatOptions: {
pattern: 'MMMM dd, yyyy HH:mm:ss'
}
                            }"/>
                        </VBox>

                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>DocumentDate}" />
                            <!-- missing -->
                            <Text text="{path:'DocumentDate',
                                  type: 'sap.ui.model.type.DateTime',
formatOptions: {
pattern: 'MMMM dd, yyyy HH:mm:ss'
}
                            }"/>
                        </VBox>
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>PostingDate}" />
                            <!-- missing -->
                            <Text text="{path:'PostingDate',
                                  type: 'sap.ui.model.type.DateTime',
formatOptions: {
pattern: 'MMMM dd, yyyy HH:mm:ss'
}
                            }"/>
                        </VBox>
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>status}" />
                            <!-- missing -->
                            <ObjectStatus text="{Status}" state="{= ${Status} === 'POSTED' ? 'Success' : ${Status} === 'RESERVED' ? 'Information' : 'Error'}" visible="{= ${Status}.length>0 ? true : false }"/>
                        </VBox>



                    </FlexBox>
                </VBox>
                <!-- <VBox renderType="Bare">
                    <Label text="{i18n>instruction}" design="Bold"/>
                    <ObjectAttribute text="Please raise the inspection call through SIMS portal." />
                </VBox> -->
            </FlexBox>
        </uxap:headerContent>
        <uxap:sections>
            <!-- Line Items Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>lineItems}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>lineItems}">
                        <smartTable:SmartTable class="sapUiResponsiveContentPadding" id="idListTable" editable="false" placeToolbarInTable="true" enableAutoBinding="true" entitySet="IssuedMaterialSet" tableBindingPath="IssuedMaterialParents" showFullScreenButton="true" header="Issue Detail Items" showRowCount="true" tableType="ResponsiveTable" demandPopin="false" useExportToExcel="false" useTablePersonalisation="true" useVariantManagement="false" beforeRebindTable="onbeforeRebindConsumptionTable" requestAtLeastFields="ID" ignoreFromPersonalisation="IsArchived">
                            <Table sticky="ColumnHeaders,HeaderToolbar" updateFinished="onIssueTableUpdateFinished" alternateRowColors="true">
                                <columns>
                                    <Column >
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "MaterialCode", "leadingProperty": "MaterialCode",
"columnIndex": 0 ,"sortProperty": "MaterialCode","filterProperty": "MaterialCode"}'/>
                                        </customData>
                                        <Text text="{i18n>MaterialCode}"/>
                                    </Column>
                                    <Column >
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "RequirementQuantity", "leadingProperty": "RequirementQuantity",
"columnIndex": 1 ,"sortProperty": "RequirementQuantity","filterProperty": "RequirementQuantity"}'/>
                                        </customData>
                                        <Text text="{i18n>RequirementQuantity}"/>
                                    </Column>
                                    <Column >
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "IssuedQty", "leadingProperty": "IssuedQty",
"columnIndex": 2 ,"sortProperty": "IssuedQty","filterProperty": "IssuedQty"}'/>
                                        </customData>
                                        <Text text="{i18n>IssuedQty}"/>
                                    </Column>
                                    <Column >
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "ConsumedQty", "leadingProperty": "ConsumedQty",
"columnIndex": 3 ,"sortProperty": "ConsumedQty","filterProperty": "ConsumedQty"}'/>
                                        </customData>
                                        <Text text="{i18n>ConsumedQty}"/>
                                    </Column>
                                    <Column >
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "ReturnedQty", "leadingProperty": "ReturnedQty",
"columnIndex": 4 ,"sortProperty": "ReturnedQty","filterProperty": "ReturnedQty"}'/>
                                        </customData>
                                        <Text text="{i18n>ReturnedQty}"/>
                                    </Column>
                                    <Column >
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "BalanceQty", "leadingProperty": "BalanceQty",
"columnIndex": 4 ,"sortProperty": "BalanceQty","filterProperty": "BalanceQty"}'/>
                                        </customData>
                                        <Text text="{i18n>BalanceQty}"/>
                                    </Column>
                                    <Column >
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "StorageLocation", "leadingProperty": "StorageLocation",
"columnIndex": 5 ,"sortProperty": "StorageLocation","filterProperty": "StorageLocation"}'/>
                                        </customData>
                                        <Text text="{i18n>StorageLocation}"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem >
                                        <cells>
                                            <ObjectIdentifier title="{MaterialCode}" />
                                            <Text text="{RequirementQuantity}"/>
                                            <Text text="{IssuedQty}"/>
                                            <Text text="{ConsumedQty}"/>
                                            <Text text="{ReturnedQty}"/>
                                            <Text text="{BalanceQty}"/>
                                            <Text text="{StorageLocation}"/>
                                            <!-- <Text text="{path:'PostingDate',
type: 'sap.ui.model.type.DateTime',
formatOptions: {
pattern: 'MMMM dd, yyyy HH:mm:ss'
}
}"/> -->
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </smartTable:SmartTable>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>