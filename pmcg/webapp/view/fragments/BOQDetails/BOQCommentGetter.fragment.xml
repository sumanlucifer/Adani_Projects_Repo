<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" 
xmlns:core="sap.ui.core">
	<Dialog title="{BOQApprovalModel>/Label}" id="materialFragment">
        <content>
        <FlexBox wrap="Wrap" renderType="Bare" class="sapUiSmallMargin" justifyContent="Center">
            <TextArea value="{BOQApprovalModel>/Comment}" liveChange="onCommentLiveChange" cols="80"></TextArea>
        </FlexBox>
        </content>
		<beginButton>
            <Button id="idPostButton" text="{i18n>Post}" press="onReadId" type="Emphasized" enabled="{BOQApprovalModel>/isPostButtonEnabled}"></Button>
        </beginButton>
		<endButton>
			<Button text="{i18n>cancel}" press="onCancelBOQApprovalProcess"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>