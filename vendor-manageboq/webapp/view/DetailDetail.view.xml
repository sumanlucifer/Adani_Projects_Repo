<mvc:View controllerName="com.agel.mmts.vendormanageboq.controller.DetailDetail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt">
    <Page id="page" title="{i18n>BOQListfor} {Name}">
        <content>
            <!--  <List items="{path: 'BOQGroups', sorter : {
                            path : 'ID', descending: 'true'}}">
                <StandardListItem title="{Name}" description="Total child items: {TotalChildItemCount}" info="BOQ quantity: {GeneratedBOQQty}" type="Navigation" press="onBOQGroupItemPress" highlight="{= ${Status} === 'PENDING' ? 'Warning' : ${Status} === 'REJECTED' ? 'Error' : ${Status} === 'APPROVED' ? 'Success' : 'Information' }"/>
            </List> -->
            <Table inset="false" items="{
			path: 'BOQGroups',
			sorter: {
				path: 'ID',
                descending: 'true'}
		}">
                <columns>
                    <Column width="12em">
                        <Text text="{i18n>Name}" />
                    </Column>
                    <Column minScreenWidth="Phone" demandPopin="true" hAlign="Center">
                        <Text text="{i18n>TotalItems}" />
                    </Column>
                    <Column minScreenWidth="Phone" demandPopin="true" hAlign="Center">
                        <Text text="{i18n>LineItemQuantity}" />
                    </Column>
                    <Column minScreenWidth="Desktop" demandPopin="true">
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="onBOQGroupItemPress">
                        <cells>
                            <ObjectIdentifier title="{Name}"/>
                            <Text text="{TotalChildItemCount}" />
                            <Text text="{GeneratedBOQQty}" />
                            <tnt:InfoLabel text="{
                                parts: [
                                    {path: 'Status'}
                                ],
                                formatter: '.formatter.StatusText'
                                }" displayOnly="true" colorScheme= "{
							parts: [
								{path: 'Status'}
							],
							formatter: '.formatter.availableState'
						}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>