<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="{i18n>DoyouwanttocreatethisBOQfor} {boqCreationModel>/dialogTitle}?" id="materialFragment" class="sapUiSmallMargin">
        <content>
            <!-- <FlexBox wrap="Wrap" renderType="Bare" alignItems="Center" justifyContent="Center" class="sapUiSmallMargin"> -->
            <VBox class="sapUiSmallMargin">
                <RadioButtonGroup id="idRGBOQType" columns="2" visible="{= ${boqCreationModel>/IsOne2OneLineItem}? false: ${boqCreationModel>/UOM} === 'MT'? false: true}" select="onBOQQtyTypeSelect">
					<RadioButton text="{i18n>FullBOQ}" selected="{= ${objectViewModel>/BOQQtyType} === 'F' ? true: false}" />
					<RadioButton text="{i18n>PartialBOQ}" selected="{= ${objectViewModel>/BOQQtyType} === 'P' ? true: false}" />
				</RadioButtonGroup>
                <Label text="{i18n>Pleaseenterthequantity} ({boqCreationModel>/UOM})"></Label>
                <Input value="{boqCreationModel>/quantity}" liveChange="onQuantityLiveChange" type="Number" valueState="{boqCreationModel>/valueState}" valueStateText="{boqCreationModel>/valueStateText}" editable="{= ${boqCreationModel>/UOM} === 'MT'? false: ${objectViewModel>/BOQQtyType} === 'P' ? false : true }"></Input>
                <Table visible="{= ${boqCreationModel>/IsOne2OneLineItem}? false: true}" alternateRowColors="true" width="auto" id="idGetBOQLineItemsTable" items="{boqCreationModel>/CalculatedBOQItems}" fixedLayout="false">
                    <columns>
                        <Column visible="{= ${boqCreationModel>/UOM} === 'MT'? true: ${objectViewModel>/BOQQtyType} === 'P' ? true: false }">
                            <CheckBox id="idSelectAllBoq" select="onSelectAllBoq"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>materialCode}" wrapping="true" wrappingType="Hyphenated"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>name}" wrapping="true"/>
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Desktop">
                            <Text text="{i18n>description}"/>
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="{i18n>Quantity}" />
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="{i18n>RemainingQuantity}" />
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet">
                            <Text text="{i18n>BOQQuantity}"/>
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="{i18n>UOM}"/>
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="{i18n>WeightPerPieceinkg}"/>
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="{i18n>TotalItemPerWeight}" />
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="{i18n>remarks}"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <CheckBox selected="{boqCreationModel>selected}" select="onBoqSelectChange"/>
                                <ObjectIdentifier title="{boqCreationModel>MaterialCode}"/>
                                <Text text="{boqCreationModel>Name}"/>
                                <ExpandableText text="{boqCreationModel>Description}" maxCharacters="50" overflowMode="Popover"/>
                                <Text text="{path: 'boqCreationModel>Qty'}"/>
                                <Text text="{path: 'boqCreationModel>RemainingQty'}"/>
                                <!-- <Input editable="{= ${boqCreationModel>/UOM} === 'MT'? ${boqCreationModel>selected} : false}" value="{boqCreationModel>BOQQuantity}" liveChange="onLiveChangeBoqQty" type="Number"/> -->
                                <Input editable="{boqCreationModel>selected}" value="{boqCreationModel>BOQQuantity}" liveChange="onLiveChangeBoqQty" type="Number"/>
                                <Text text="{boqCreationModel>UOM}"/>
                                <Text text="{boqCreationModel>WeightPerPiece}"/>
                                <Text text="{path: 'boqCreationModel>TotalItemWeight'}"/>
                                <ExpandableText text="{boqCreationModel>Remarks}" maxCharacters="50" overflowMode="Popover"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            <!-- </FlexBox> -->
            </VBox>
        </content>
        <beginButton>
            <Button id="idCreateBOQButton" text="{i18n>Confirm}" press="onConfirmCreateBOQPress" type="Emphasized" enabled="{boqCreationModel>/isConfirmButtonEnabled}"></Button>
        </beginButton>
        <endButton>
            <Button text="{i18n>Cancel}" press="onCancelBOQCreationProcess"></Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>