<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:tt="sap.ui.table">
    
    <Table id="idInnerPackaging" items="{path: 'InnerPackagings'}" autoPopinMode="true" growingThreshold="5" growing="true" fixedLayout="false">
    
        <columns>
            <Column>
                <Text text="{i18n>InnerPackaging}"/>
            </Column>
            <Column>
                <Text text="{i18n>lineItem}"/>
            </Column>
            <!-- <Column>
                <Text text="Dispatch Qty."/>
            </Column> -->
            <Column>
                <Text text="{i18n>PackagingQty}"/>
            </Column>
            <Column>
                <Text text="{i18n>UOM}"/>
            </Column>
            <Column>
              <Text text="{i18n>Action}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{PackagingType}"/>
                    <Text text="{Name}"/>
                    <!-- <Text text="{DispatchQty}"/> -->
                    <Text text="{PackagingQty}"/>
                    <Text text="{UOM}"/> 
                    <Link text="View QR Code" binding="{QrCode}" visible="{= ${QRNumber} !== '' ? true :false}" press="onViewQRCodePress"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>