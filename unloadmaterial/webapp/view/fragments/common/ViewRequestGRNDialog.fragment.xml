<core:FragmentDefinition xmlns="sap.m" xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.ui.layout.form">
    <Dialog class="testTitle">
        <content>
            <FlexBox wrap="Wrap" renderType="Bare" class="sapUiSmallMargin">
                <f:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2" singleContainerFullSize="true" class="style-RemoveTitleHeight">
                    <f:content>
                        <Label text="{i18n>PONo}"/>
                        <Text text="{PONumber}" binding="{PurchaseOrder}"/>
                        <Label text="{i18n>PODate}"/>
                        <Text text="{path:'POReleaseDate',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }}" binding="{PurchaseOrder}"/>
                        <Label text="{i18n>GatePassNumber}" />
                        <Text text="{GateEntryNumber}"/>
                        <Label text="{i18n>TotalWeight}"/>
                        <Text text="{TotalWeight}"/>
                        <!-- <Label text="{i18n>StorageLocation}"/>
                        <Text text="{StorageLocation}" binding="{PackingListParentItems}"/>
                        <Label text="{i18n>BatchNumber}"/>
                        <Text text="{BatchNumber}" binding="{PackingListParentItems}"/> -->
                        </f:content>
                </f:SimpleForm>
                <f:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2" singleContainerFullSize="true" class="style-RemoveTitleHeight">
                    <f:content>
                        <Label text="{i18n>MovementType}" required="true"></Label>
                        <Input value="{requestModel>/MovementType}" editable="false"></Input>
                        <Label text="{i18n>TotalPackagingWeight}" required="true"></Label>
                        <Input value="{requestModel>/quantity}" liveChange="onQuantityLiveChange" type="Number" valueState="{requestModel>/valueState}" valueStateText="{requestModel>/valueStateText}"></Input>
                        <Label text="{i18n>BillofLading}" required="true"></Label>
                        <Input value="{requestModel>/billoflading}" change="fnSetRequestButtonEnableDisable" type="Text" valueState="{requestModel>/valueState}" valueStateText="{requestModel>/valueStateText}"></Input>
                        <Label text="{i18n>LRNumber}" required="true"></Label>
                        <Input value="{requestModel>/lrnumber}" change="fnSetRequestButtonEnableDisable" type="Text" valueState="{requestModel>/valueState}" valueStateText="{requestModel>/valueStateText}"></Input>
                        <Label text="{i18n>reference}" required="true"></Label>
                        <Input value="{requestModel>/reference}" change="fnSetRequestButtonEnableDisable" type="Text" valueState="{requestModel>/valueState}" valueStateText="{requestModel>/valueStateText}"></Input>
                        <Label text="{i18n>DeliveryNote​​​​​​​​​}" required="true"></Label>
                        <Input value="{requestModel>/delivery}" change="fnSetRequestButtonEnableDisable" type="Text" valueState="{requestModel>/valueState}" valueStateText="{requestModel>/valueStateText}"></Input>
                    </f:content>
                </f:SimpleForm>
                <MessageStrip
                        text="{i18n>Itemsmarkwithpartialarenotallowed}"
                        type="Warning"
                        class="sapUiTinyMarginBottom"
                        showIcon="true"/>
                <Table width="auto" growing="true" growingThreshold="5" items= "{RestrictedStoreStockParents}">
                    <columns>
                        <Column importance="High">
                            <Text text="{i18n>lineNo}" wrapping="true" wrappingType="Hyphenated" />
                        </Column>
                        <Column importance="High">
                            <Text text="{i18n>materialCode}" wrapping="true" wrappingType="Hyphenated" />
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center" >
                            <Text text="Name"/>
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="Description"/>
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center" >
                            <Text text="Movement Type"/>
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center" >
                            <Text text="{i18n>Plant}" />
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center" >
                            <Text text="{i18n>quantity}" />
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center" >
                            <Text text="{i18n>UOM}"/>
                        </Column>
                         <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center" >
                            <Text text="{i18n>ValuationArea}"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{LineNumber}"/>
                                <!-- <ObjectIdentifier title="{MaterialCode}"/> -->
                                <VBox>
                                    <tnt:InfoLabel text="{i18n>Partial}" renderMode="Narrow" colorScheme="2" visible="{= ${IsPartial} === true ? true  : false }"/>
                                    <ObjectIdentifier title="{MaterialCode}"/>
                                </VBox>  
                                <Text text="{Name}"/>
                                <Text text="{Description}"/>
                                <Text text="{MovementType}"/>
                                <Text text="{PlantCode}"/>
                                <Text text="{Qty}"/>
                                <Text text="{UOM}"/>
                               <ComboBox enabled="{= ${IsPartial} === true ? false  : true }"
                                    loadItems="onLoadValuationAreaItems"
                                    showSecondaryValues= "true"
                                    selectionChange="handleSelectionChange"
                                    items="{path: '/MasterMaterialValAreaSet',
                                            templateShareable:true,
                                            suspended: true
                                    }">
                                <core:ListItem key="{ValuationType}" text="{ValuationType}" additionalText="{ValuationArea}"/>
    		                    </ComboBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                
            </FlexBox>
        </content>
        <beginButton>
            <Button text="{i18n>Request}" press="onRequestPress"  type="Emphasized" enabled="{requestModel>/isConfirmButtonEnabled}"></Button>
        </beginButton>
        <endButton>
            <Button text="{i18n>close}" press="onViewChildDialogClose" type="Emphasized" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
