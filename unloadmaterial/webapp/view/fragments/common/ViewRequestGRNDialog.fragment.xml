<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.ui.layout.form">
    <Dialog class="testTitle">
        <content>
            <FlexBox wrap="Wrap" renderType="Bare" class="sapUiSmallMargin">
                <f:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="4" singleContainerFullSize="true" class="style-RemoveTitleHeight">
                    <f:content>
                        <!-- <Label text="Document Date"/>
                         <Text text="{path:'DocumentDate',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }}"/> -->
                        <Label text="{i18n>PODate}"/>
                        <Text text="{path:'POReleaseDate',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }}" binding="{PurchaseOrder}"/>
                        <Label text="{i18n>GatePassNumber}" />
                        <Text text="{GateEntryNumber}"/>
                        <Label text="{i18n>TotalWeight}"/>
                        <Text text="{TotalWeight}"/>
                        <Label text="{i18n>PONo}"/>
                        <Text text="{PONumber}" binding="{PurchaseOrder}"/>
                        <Label text="{i18n>LineNo}"/>
                        <Text text="{LineNumber}" binding="{StockParentItem}"/>
                        <!-- <Label text="Movement Type"/>
                        <Text text="{MovementType}"/> -->
                        <Label text="{i18n>MatCode}"/>
                        <Text text="{MaterialCode}" binding="{StockParentItem}"/>
                        <Label text="{i18n>Plant}"/>
                        <Text text="{PlantCode}" binding="{StockParentItem}"/>
                        <Label text="{i18n>StorageLocation}"/>
                        <Text text="{StorageLocation}" binding="{PackingListParentItems}"/>
                        <Label text="{i18n>BatchNumber}"/>
                        <Text text="{BatchNumber}" binding="{PackingListParentItems}"/>
                        <!-- <Label text="Valuation Type"/>
                        <Text text="{ValuationType}"/> -->
                        <Label text="{i18n>Qty}"/>
                        <Text text="{Qty}" binding="{StockParentItem}"/>
                        <Label text="{i18n>BaseUnit}"/>
                        <Text text="{UOM}" binding="{StockParentItem}"/>
                        <Label text="{i18n>DeliveryNote}"></Label>
                        <Input value="{requestModel>/delivery}" liveChange="onDeliveryNoteLiveChange" type="Text" valueState="{requestModel>/valueState}" valueStateText="{requestModel>/valueStateText}"></Input>
                        <Label text="{i18n>TotalPackagingWeight}"></Label>
                        <Input value="{requestModel>/quantity}" liveChange="onQuantityLiveChange" type="Number" valueState="{requestModel>/valueState}" valueStateText="{requestModel>/valueStateText}"></Input>
                        <Label text="Bill of Lading"></Label>
                        <Input value="{requestModel>/billoflading}" liveChange="onBillofLadingLiveChange" type="Text" valueState="{requestModel>/valueState}" valueStateText="{requestModel>/valueStateText}"></Input>
                        <Label text="Gate Pass Number"></Label>
                        <Input value="{requestModel>/gatepassnumber}" liveChange="onGatePassNumberLiveChange" type="Text" valueState="{requestModel>/valueState}" valueStateText="{requestModel>/valueStateText}"></Input>
                        <Label text="Reference"></Label>
                        <Input value="{requestModel>/reference}" liveChange="onReferenceLiveChange" type="Text" valueState="{requestModel>/valueState}" valueStateText="{requestModel>/valueStateText}"></Input>
                    </f:content>
                </f:SimpleForm>
            </FlexBox>
        </content>
        <beginButton>
            <Button id="idRequestButton" text="{i18n>Request}" press="onRequestPress"  type="Emphasized" enabled="{requestModel>/isConfirmButtonEnabled}"></Button>
        </beginButton>
        <endButton>
            <Button text="{i18n>close}" press="onViewChildDialogClose" type="Emphasized" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
