<mvc:View xmlns:f2="sap.f"
    xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m" controllerName="com.agel.mmts.raiseconsumptionporequest.controller.RaiseConsumptionCancelPage" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" busy="{objectViewModel>/busy}">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:breadcrumbs>
                    <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>PostedConsumptionDetail}">
                        <Link text="{i18n>PostedConsumptions}" press=".handleToAllPOBreadcrumPress"/>
                    </Breadcrumbs>
                </uxap:breadcrumbs>
                <uxap:expandedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>ConsumptionPostingDetail}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{MaterialDocumentNumber}" wrapping="true" titleStyle="H3" />
                    </FlexBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>ConsumptionPostingDetail}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{MaterialDocumentNumber}" wrapping="true" titleStyle="H3"/>
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedContent>
                </uxap:expandedContent>
                <uxap:snappedTitleOnMobile>
                    <Title text="{i18n>MaterialDocumentNumber}- {MaterialDocumentNumber}" wrapping="true" titleStyle="Auto"/>
                </uxap:snappedTitleOnMobile>
                <uxap:actions>
                        <!-- <Button text="Done" press="onPressDone" type="Accept" visible="{objectViewModel>/doneButton}"/> -->
                        <Button visible="{= ${Status} === 'CONSUMPTION SUCCESSFUL' ? true : ${Status} === 'CANCELLATION FAILED' ? true : ${Status} === 'PARTIALLY CANCELLED' ? true : false }" text="Cancel consumption posting" press="onPressCancelConsumptionPosting" type="Emphasized"/>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
            <FlexBox wrap="Wrap" height="100%" renderType="Bare" direction="Column">
                <VBox binding="{ConsumptionPostingReserve}">
                </VBox>
                <VBox renderType="Bare">
                    <FlexBox direction="Row" renderType="Bare" class="sapUiTinyMarginBottom">
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>GatePassNumber}" />
                            <!-- missing -->
                            <Text text="{GatePassNumber}"/>
                        </VBox>
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>issuedDate}" />
                            <!-- missing -->
                            <Text text="{path:'CreatedAt',
                                    type: 'sap.ui.model.type.DateTime',
formatOptions: {
pattern: 'MMMM dd, yyyy HH:mm:ss'
}
                            }"/>
                        </VBox>
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>PostingDate}" />
                            <!-- missing -->
                            <Text text="{path:'PostingDate',
                                 type: 'sap.ui.model.type.DateTime',
formatOptions: {
pattern: 'MMMM dd, yyyy HH:mm:ss'
}
                            }"/>
                        </VBox>
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>ReservationNumber}" />
                            <!-- missing -->
                            <Text text="{ReservationNumber}"/>
                        </VBox>
                         <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>status}" />
                            <!-- missing -->
                            <ObjectStatus text="{Status}" state="{= ${Status} === 'CONSUMPTION SUCCESSFUL' ? 'Success' : ${Status} === 'PARTIALLY CANCELLED' ? 'Information' : 'Error'}" visible="{= ${Status}.length>0 ? true : false }"/>
                        </VBox>
                    </FlexBox>
                </VBox>
                <!-- <VBox renderType="Bare">
                    <Label text="{i18n>instruction}" design="Bold"/>
                    <ObjectAttribute text="Please raise the inspection call through SIMS portal." />
                </VBox> -->
            </FlexBox>
        </uxap:headerContent>
        <uxap:sections>
            <!-- Line Items Section -->
            <uxap:ObjectPageSection titleUppercase="false">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection >
                        <Table  id="idConsumedPostedTable" growing="true" growingThreshold="10" items="{consumptionPostedData>/}" >
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <content>
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column width="5%">
                                <CheckBox  select="onSelectAll" ></CheckBox>
                                </Column>
                                    <Column>
                                        <Text text="Material Code"/>
                                    </Column>
                                     <Column>
                                        <Text text="Description"/>
                                    </Column>
                                    <Column demandPopin="true" minScreenWidth="Tablet">
                                        <Text text="Plant"/>
                                    </Column>
                                   
                                    <Column demandPopin="true" minScreenWidth="Tablet">
                                        <Text text="StorageLocation"/>
                                    </Column>
                                     <Column demandPopin="true" minScreenWidth="Desktop">
                                        <Text text="Quantity"/>
                                    </Column>
                                     <Column demandPopin="true" minScreenWidth="Tablet">
                                        <Text text="Status"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem id="id">
                                        <cells>
                                            <CheckBox    visible="{= ${consumptionPostedData>Status} === 'CONSUMPTION SUCCESSFUL' ? true : ${consumptionPostedData>Status} === 'CANCELLATION FAILED' ? true : false }"  selected="{consumptionPostedData>isSelected}"
                                           select="onSelectionOfRow" />
                                            <Text text="{consumptionPostedData>MaterialCode}"/>
                                             <Text text="{consumptionPostedData>Name}"/>
                                            <Text  text="{consumptionPostedData>Plant}"/>
                                          
                                          <Text text="{consumptionPostedData>StorageLocation}"/>
                                              <Text  text="{consumptionPostedData>Quantity}"/>
                                           <ObjectStatus text="{consumptionPostedData>Status}" state="{= ${consumptionPostedData>Status} === 'CONSUMPTION SUCCESSFUL' ? 'Success' : ${Status} === 'CONSUMPTION CANCELLED' ? 'Information' : 'Error'}" visible="{= ${Status}.length>0 ? true : false }"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View> 