<core:FragmentDefinition xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core">
    <smartTable:SmartTable class="sapUiResponsiveContentPadding" id="idIssueTable" editable="false" placeToolbarInTable="true" enableAutoBinding="true" entitySet="ConsumptionPostingReserveSet" showFullScreenButton="true" requestAtLeastFields="ID" header="Reservations" showRowCount="true" tableType="ResponsiveTable" demandPopin="false" useExportToExcel="false" useTablePersonalisation="true" useVariantManagement="false" beforeRebindTable="onbeforeRebindIssueReservedTable" ignoreFromPersonalisation="RequestDate, CancelledDate, CancelledBy, Comment, CostCentre, WBSNumber, ProfitCentre, GLAccount, ReceivingLocation, IsArchived, CreatedAt, CreatedBy, UpdatedAt, UpdatedBy">
        <Table sticky="ColumnHeaders,HeaderToolbar" updateFinished="onIssueTableUpdateFinished" alternateRowColors="true">
            <columns>
                <Column >
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "ReservationNumber", "leadingProperty": "ReservationNumber",
"columnIndex": 0 ,"sortProperty": "ReservationNumber","filterProperty": "ReservationNumber"}'/>
                    </customData>
                    <Text text="{i18n>reservationNumber}"/>
                </Column>

 <Column >
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Plant", "leadingProperty": "Plant",
"columnIndex": 1 ,"sortProperty": "Plant","filterProperty": "Plant"}'/>
                    </customData>
                    <Text text="{i18n>Plant}"/>
                </Column>


                <Column demandPopin="true" minScreenWidth="Desktop">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "GoodsRecipient", "leadingProperty": "GoodsRecipient",
"columnIndex": 2 ,"sortProperty": "GoodsRecipient","filterProperty": "GoodsRecipient"}'/>
                    </customData>
                    <Text text="{i18n>goodsRecipient}"/>
                </Column>
                <Column demandPopin="true" minScreenWidth="Tablet">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "ReservationDate", "leadingProperty": "ReservationDate",
"columnIndex": 3 ,"sortProperty": "ReservationDate"}'/>
                    </customData>
                    <Text text="{i18n>reservationDate}"/>
                </Column>
                <Column demandPopin="true" minScreenWidth="Tablet">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Status", "leadingProperty": "Status",
"columnIndex": 4 ,"sortProperty": "Status"}'/>
                    </customData>
                    <Text text="{i18n>Status}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem type="Navigation" press="onDetailPress">
                    <cells>
                        <ObjectIdentifier title="{ReservationNumber}"/>
                          <Text text="{Plant}"/>
                        <Text text="{GoodsRecipient}"/>
                        <Text text="{path:'ReservationDate',
type: 'sap.ui.model.type.DateTime',
formatOptions: {
pattern: 'MMMM dd, yyyy HH:mm:ss'
}
}"/>
                        <ObjectStatus text="{Status}" state="{= ${Status} === 'POSTED' ? 'Success' : ${Status} === 'RESERVED' ? 'Information' : 'Error'}" visible="{= ${Status}.length>0 ? true : false }"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </smartTable:SmartTable>
</core:FragmentDefinition> 