<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:tt="sap.ui.table" controllerName="com.agel.mmts.tcengineer.view.blocks.BOQDetails.boqItemsTable.BOQItemsTableController">

    <Table id="idBOQItemTable" items="{path: 'BOQGroup/BOQItems'}" autoPopinMode="true" growingThreshold="5" growing="true" fixedLayout="false">
        <headerToolbar>
            <OverflowToolbar >
                <content>
                    <ToolbarSpacer></ToolbarSpacer>
                    <Button text="Approve" type="Accept" press="onApproveBOQPress" visible="{= ${Status}=== 'PENDING' ? true : false}"></Button>
                    <Button text="Reject" type="Reject" press="onRejectBOQPress" visible="{= ${Status}=== 'PENDING' ? true : false}"></Button>
                    <!-- <Button icon="sap-icon://sort"></Button>
                    <Button icon="sap-icon://filter"></Button>
                    <Button icon="sap-icon://group"></Button> -->
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Material Code"/>
            </Column>
            <Column>
                <Text text="Material Name"/>
            </Column>
            <Column>
                <Text text="Material Description"/>
            </Column>
            <Column>
                <Text text="Approval Request Quantity"/>
            </Column>
            <Column>
                <Text text="UOM"/>
            </Column>
            <Column>
                <Text text="Total Weight"/>
            </Column>
            <Column>
                <Text text="Remarks"/>
            </Column>
            <!-- <Column>
                <Text text="Name"/>
            </Column> -->
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier title="{MaterialCode}"/>
                    <Text text="{Name}"/>
                    <ExpandableText text="{Description}" overflowMode="InPlace" maxCharacters="50" />
                    <Text text="{Qty}"/>
                    <Text text="{UOM}"/>
                    <Text text="{TotalItemWeight}"/>
                    <ExpandableText text="{Remarks}" overflowMode="InPlace" maxCharacters="50" />
                    <!-- <Text text="{path:'CreatedAt',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }
                        }"/> -->

                </cells>
            </ColumnListItem>
        </items>
    </Table>




